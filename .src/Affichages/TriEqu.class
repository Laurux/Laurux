Public Sub _new(sOrg As String, cdcp As String, retro As Boolean, client As String, type As String, tclient As Boolean)
  
  If Settings["/Soc" & Start.Societe & "/Coul_fen"] Then Utils.Observers(Me)
  Origine = sOrg
  CodeA = cdcp
  retroc = retro
  cli = client
  typec = type
  Tcli = tclient
  lg = Int(Colart.height / Colart.Rows.Height) - 1
  Tri = "codequ"
  tri2 = "art_paht"
  Tris()
  If IsNull(codeA) Then
    Sel = ""
    Deb2()
  Else
    Sel = CodeA
    Deb2()
  Endif
  'Colart.MoveTo(0, 0)
  'Try Colart.Current.EnsureVisible
  Co.SetFocus
  Co.Select
  
End

Public Sub Colart_KeyPress()
  
  If Key.code = Key.Enter Or Key.code = Key.Return Then
    Colart_Click()
  Endif
  If Key.code = Key.Escape Or Key.code = Key.F2 Then
    Facture.Bsel = False
    Try Facture.Cart.text = ""
    Me.Close
  Endif
  If Key.code = Key.Up Then
    If Colart.Row = 0 Then
      Remonter_Click()
    Endif
  Endif
  If Key.code = Key.down Then
    If Colart.Row = lg - 1 Then
      Descendre_Click()
    Endif
  Endif
  If Key.code = Key.PageDown Then
    Descendre_Click()
  Endif
  
  If Key.code = Key.PageUp Then
    Remonter_Click()
  Endif
  
End

Public Sub Colart_MouseWheel()
  
  If mouse.Delta = -1 Then
    If Colart.Rows.Count = lg Then NbEnreg = NbEnreg + lg
  Else
    If Colart.Rows.Count <= lg Then NbEnreg = NbEnreg - lg
  Endif
  Deplacement()
  
End

Public Sub Descendre_Click()
  
  If Colart.Rows.Count = lg Then
    NbEnreg = NbEnreg + lg
    Deplacement()
  Endif
  Try Colart.MoveTo(0, 0)
  Try Colart.Current.EnsureVisible
  Try Colart.SetFocus
  
End

Public Sub Remonter_Click()
  
  NbEnreg = NbEnreg - lg
  Deplacement()
  Try Colart.MoveTo(0, 0)
  Try Colart.Current.EnsureVisible
  Try Colart.SetFocus
  
End

Public Sub Descendre_KeyPress()
  
  If Key.code = Key.Escape Or Key.code = Key.F2 Then
    Facture.Bsel = False
    Try Facture.Cart.text = ""
    Me.Close
  Endif
  If key.code = key.PageDown Then Descendre_Click()
  If key.code = key.PageUp Then Remonter_Click()
  
End

Public Sub Remonter_KeyPress()
  
  If Key.code = Key.Escape Or Key.code = Key.F2 Then
    Facture.Bsel = False
    Try Facture.Cart.text = ""
    Me.Close
  Endif
  If key.code = key.PageDown Then Descendre_Click()
  If key.code = key.PageUp Then Remonter_Click()
  
End

Public Sub Deplacement()
  
  If NbEnreg < 0 Then NbEnreg = 0
  Deb2()
  
End

Public Sub Colart_Click()
  
  Select Case Origine
    Case "Facture"
      Facture.Bsel = True
      Try Facture.Cart.text = Colart[Colart.row, 3].Text
      Clic = True
  End Select
  Me.close
  
End

Public Sub Form_Close()
  
  If Not clic Then 
    Facture.bsel = False
    Facture.Cart.text = ""
  Endif
  
End

Public Sub Colart_Data(Row As Integer, Column As Integer)
  
  With Utils
    ArtTable[0] = "art_stkmin"
    ArtTable[1] = "art_stkmax"
    ArtTable[2] = "art_qte"
    ArtTable[3] = "art_code"
    ArtTable[4] = "art_design"
    ArtTable[5] = "art_qte"
    ArtTable[6] = "art_paht"
    ArtTable[7] = "art_pvttc"
    ArtTable[8] = "art_fam"
    ArtTable[9] = "art_four"
    ArtTable[10] = ""
    .rs2.MoveTo(Row)
    colart.data.Text = Str(.rs2[Arttable[Column]])
    If column = 0 Then
      If Val(utils.cpoint(Colart.Data.text)) > 0 Then 
        coul = Val("&HCAE8CA&")
      Else
        coul = Val("&HE8E8B0&")
      Endif
    Endif
    
    If column = 3 Then codequ = colart.data.Text
    If column = 10 Then 
      tarifclient()
      Try colart.data.Text = PvhtPro
    Endif
    'If column = 10 Then colart.data.Text = Codea 
    colart.Data.Background = coul
  End With
  
End

Public Sub Tarifclient()
  
  Dim Tarts As Result
  Dim RemCli As Float = 0
  Dim prvt As Float
  Dim Typeremise As String
  
  pvpro = 0
  With Utils
    If retroc = False Then
      Tarts = Utils.db.Exec("SELECT art_fam, art_pvht FROM " & Cbase.Table("TabArt") & " where art_code = &1", Codequ)
      If Tarts.Available Then
        prvt = Tarts!art_pvht
        Tarts = Utils.db.Exec("SELECT * FROM " & Cbase.Table("TabRemTypec") & " where coder = &1 and codef = &2", Typec, Tarts!art_fam)
        If Tarts.Available Then
          Remcli = Tarts!remise
          Typeremise = "Typec"
          If remcli <> 0 Then
            Try prvt = prvt - (prvt * Remcli / 100)
            Try pvpro = Val(.cpoint(prvt))
          Endif
        Else
          Remcli = 0
          Typeremise = ""
        Endif
      Endif
      Tarts = Utils.db.Exec("SELECT art_fam, art_pvht FROM " & Cbase.Table("TabArt") & " where art_code = &1", Codequ)
      If Tarts.Available Then
        prvt = Tarts!art_pvht
        Tarts = Utils.db.Exec("SELECT * FROM " & Cbase.Table("RemCliFam") & " where codec = &1 and codef = &2", Cli, Tarts!art_fam)
        If Tarts.Available Then
          Remcli = Tarts!remise
          Typeremise = "Clifam"
          If remcli <> 0 Then
            Try prvt = prvt - (prvt * Remcli / 100)
            Try pvpro = Val(.cpoint(prvt))
          Endif
        Else
          If IsNull(Remcli) Then 
            Remcli = 0
            Typeremise = ""
          Endif
        Endif
      Endif
      If Not IsNull(typec) Then
        Tarts = Utils.db.Exec("SELECT art_fam FROM " & Cbase.Table("TabArt") & " where art_code = &1", Codequ)
        If Tarts.Available Then
          Tarts = Utils.db.Exec("SELECT * FROM " & Cbase.Table("TabCtcli") & " Left join " & Cbase.Table("TabArt") & " on art_code = &3  where coder = &1 and codef = &2", Typec, Tarts!art_fam, Codequ)
          If Tarts.Available Then
            prvt = Tarts!art_prvt
            Try pvpro = Val(.cpoint(prvt)) * Val(.cpoint(Tarts!coeff))
          Endif
        Endif
      Endif
      If Tcli Then
        Tarts = Utils.db.Exec("SELECT * FROM " & Cbase.Table("TabTcli") & " Left join " & Cbase.Table("TabArt") & " on art_code = &2  where type = &1 and cart = &2", Typec, Codequ)
        If Tarts.Available Then
          prvt = Tarts!art_prvt
          Try pvpro = Val(.cpoint(prvt)) * Val(.cpoint(Tarts!coef))
        Endif
      Endif
      Tarts = Utils.db.Exec("SELECT * FROM " & Cbase.Table("TabTarcli") & " Left join " & Cbase.Table("TabArt") & " on art_code = &2 where ccli = &1 and cart = &2", Cli, Codequ)
      If Tarts.Available Then
        prvt = Tarts!art_prvt
        Try pvpro = Val(.cpoint(prvt)) * Val(.cpoint(Tarts!coef))
      Endif
    Endif
    PvhtPro = Format$(pvpro, "0.00")
  End With
  
End

