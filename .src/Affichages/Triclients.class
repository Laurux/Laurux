' Gambas class file

Private NbEnreg As Integer = 0 ' Enregistrement de départ de la sélection
Private Clitable As New String[9]
Private Dbl As Boolean = False
Private Tri As String
Private sel As String
Private Origine As String
Private lg As Integer

'************************************** Gestion des articles *****************************************************
Public Sub _new(sOrg As String)

  Tri = "cli_code"
  sel = ""
  Utils.Observers(Me)
  lg = Int(Colcli.height / colcli.Rows.Height) - 1
  Me.Center
  Origine = sOrg
  C1.Text = "Code"
  N1.Text = "Nom"
  P1.Text = "      Prénom             Adresse1                      Adresse2   "
  Cp1.Text = "Cp"
  VILLE.Text = "Ville"
  Tris()
  Deb3()
  Colcli.MoveTo(0, 0)
  Try colcli.Current.EnsureVisible
  N1.setfocus

End

Public Sub Tris()

  With colcli
    .Columns.count = 7
    .Columns[0].Width = C1.Width
    .Columns[1].Width = N1.Width
    .Columns[2].Width = 179
    .Columns[3].Width = 162
    .Columns[4].Width = 162
    .Columns[5].Width = Cp1.Width
    .Columns[6].Width = VILLE.Width
  End With

End

'**********************************************************
'*               recherche des clients                    *
'**********************************************************
Public Sub Colcli_Data(Row As Integer, Column As Integer)

  Dim Frmt As New String[]
  Dim Frmt2 As String[]

  Frmt = Utils.FColr(Start.LocalSettings["/Coul/Fnets"])
  Frmt2 = Utils.FColr(Start.LocalSettings["/Coul/Znaff"])
  With Utils
    CliTable[0] = "cli_code"
    CliTable[1] = "cli_nom"
    CliTable[2] = "cli_pnm"
    CliTable[3] = "cli_adr1"
    CliTable[4] = "cli_adr2"
    CliTable[5] = "cli_cd_ptl"
    CliTable[6] = "cli_ville"
    .rs2.MoveTo(Row)
    Try Colcli.data.Text = Str(.rs2[CliTable[Column]])
  End With

End

Public Sub colcli_Click()

  Select Case Origine

    Case "Facture"
      Variables.Bsel = True
      Variables.$Codeclient = colcli[colcli.row, 0].Text

    Case "TarCli"
      TarCli.Bsel = True
      TarCli.Codeclient = colcli[colcli.row, 0].Text

    Case "Facturefm"
      Facturefm.Bsel = True
      Facturefm.Cclient = colcli[colcli.row, 0].Text

    Case "FacturefmA"
      FacturefmA.Bsel = True
      FacturefmA.Cclient = colcli[colcli.row, 0].Text

    Case "Histocliart"
      Histocliart.Bsel = True
      Histocliart.Cclient = colcli[colcli.row, 0].Text

  End Select
  Me.close

End

Public Sub ColCli_KeyPress()

  If Key.code = Key.Enter Or Key.code = Key.Return Then
    ColCli_Click()
  Endif
  If Key.code = Key.Up Then
    If ColCli.Row = 0 Then
      Remonter_Click()
    Endif
  Endif
  If Key.code = Key.down Then
    If ColCli.Row = lg - 1 Then
      Descendre_Click()
    Endif
  Endif
  If Key.code = Key.PageDown Then
    Descendre_Click()
  Endif

  If Key.code = Key.PageUp Then
    Remonter_Click()
  Endif
  If Key.code = Key.Escape Or Key.code = Key.F2 Then Me.Close()

End

Public Sub ColCli_MouseWheel()

  If mouse.Delta = -1 Then
    If Colcli.Rows.Count = lg Then NbEnreg = NbEnreg + lg
  Else
    If Colcli.Rows.Count <= lg Then NbEnreg = NbEnreg - lg
  Endif
  Deplacement()

End

Public Sub Descendre_Click()

  If ColCli.Rows.Count = lg Then
    NbEnreg = NbEnreg + lg
    Deplacement()
  Endif
  Try ColCli.MoveTo(0, 0)
  Try ColCli.Current.EnsureVisible
  Try ColCli.SetFocus

End

Public Sub Remonter_Click()

  NbEnreg = NbEnreg - lg
  Deplacement()
  Try ColCli.MoveTo(0, 0)
  Try ColCli.Current.EnsureVisible
  Try ColCli.SetFocus

End

Public Sub Descendre_KeyPress()

  If Key.code = Key.Escape Or Key.code = Key.F2 Then
    Me.Close
  Endif
  If key.code = key.PageDown Then Descendre_Click()
  If key.code = key.PageUp Then Remonter_Click()

End

Public Sub Remonter_KeyPress()

  If Key.code = Key.Escape Or Key.code = Key.F2 Then
    Me.Close
  Endif
  If key.code = key.PageDown Then Descendre_Click()
  If key.code = key.PageUp Then Remonter_Click()

End

Public Sub Deplacement()

  If NbEnreg < 0 Then NbEnreg = 0
  If Dbl = True Then
    Deb4()
  Else
    Deb3()
  Endif

End

Public Sub Deb3()

  Tris()
  If Origine = "Facture" Then
    Utils.Base2(colcli, "select * from " & Cbase.Table("TabCli") & " where " & Tri & " like  \"%" & sel & "%\" and cli_actif <> " & -1 & " order by " & Tri & " limit " & NbEnreg & ", " & lg & " ")
  Else
    Utils.Base2(colcli, "select * from " & Cbase.Table("TabCli") & " where " & Tri & " like  \"%" & sel & "%\" order by " & Tri & " limit " & NbEnreg & ", " & lg & " ")
  Endif
  Colcli.Refresh

End

Public Sub Deb4()

  Tris()
  If Origine = "Facture" Then
    Utils.Base2(colcli, "select * from " & Cbase.Table("TabCli") & " where " & Tri & " like  \"%" & sel & "%\" and cli_actif <> " & -1 & " order by " & Tri & " desc limit " & NbEnreg & ", " & lg & "")
  Else
    Utils.Base2(colcli, "select * from " & Cbase.Table("TabCli") & " where " & Tri & " like  \"%" & sel & "%\" order by " & Tri & " desc limit " & NbEnreg & ", " & lg & "")

  Endif
  Colcli.Refresh

End

Public Sub Dbclk()

  If Not Dbl Then
    Deb4()
    Dbl = "1"
  Else
    Deb3()
    Dbl = ""
  Endif

End

