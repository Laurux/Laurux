Public Sub Button2_Click()

  Dim code As String
  Dim intitule As String
  Dim Pvht As String
  Dim Pvhtt As Float
  Dim Rm As String
  Dim rmt As Float
  Dim Net As String
  Dim nett As Float
  Dim htn1 As String
  Dim nn1 As String
  Dim Totn1 As Float
  Dim Totnn1 As String
  Dim pdf As Chistoriques

  rmt = 0
  NetT = 0
  Totn1 = 0
  totnn1 = 0
  page = 1
  Shell "cd " & User.Home & ""
  Filename = User.Home & "/tmp/Statcli.pdf"
  Me.Mouse = Mouse.Wait
  If Liste.Count Then
    pdf = New Chistoriques("Portrait", "mm", "A4")
    pdf.Open()
    pdf.AliasNbPages()
    pdf.Entete("Impression du CA clients")
    pdf.Level0F(dtn0, dtn1)
    pdf.Level1C()
    posy = 32
    Liste.MoveFirst
    Repeat
      Liste.Item.Selected = True
      code = Liste.Current[0]
      intitule = Liste.Current[1]
      Pvht = Liste.Current[3]
      Rm = Liste.Current[4]
      Net = Liste.Current[5]
      htn1 = Liste.Current[6]
      nn1 = Liste.Current[7]
      Try Totn1 = Totn1 + Val(htn1)
      If IsNull(nn1) Or If IsNull(Val(nn1)) Then nn1 = "0"
      'Totnn1 = Totnn1 + Val(nn1)
      Pvhtt = Pvhtt + Val(Pvht)
      rmt = rmt + Val(Rm)
      NetT = NetT + Val(Net)
      pdf.level2C(code, intitule, pvht, rm, net, htn1, nn1, PosY)
      posy += 5
      If PosY >= 283 Then
        pdf.Footer()
        pdf.Entete("Impression du CA clients")
        pdf.Level0F(dtn0, dtn1)
        pdf.Level1C()
        posy = 32
      Endif
    Until Liste.MoveNext()
    pdf.Lines(PosY)
    posy += 5
    pdf.Level4C(PosY)
    posy += 8
    Try Totnn1 = Format$(((Val(Utils.cpoint(nett)) - Val(Utils.cpoint(totn1))) * 100) / Val(Utils.cpoint(totn1)), "00.00")
    If Error Then Totnn1 = "0,00"
    pdf.Level5c(Format$(pvhtt, ar$), Format$(rmt, "0.00"), Format$(nett, ar$), Format$(Totn1, ar$), Totnn1, PosY)
    pdf.Footer()
    pdf.Output(Filename, False)
    Visualiseur.Prog(Filename)
  Endif
  Me.Mouse = Mouse.Pointing

End


