Public Sub Level0(dtn0 As String, dtn1 As String)

  Draw.font = font["Bitstream Charter"]
  Draw.Font.Bold = True
  Draw.Font.Size = 12
  Draw.Text("CA pour la période du  " & dtn0 & " au " & dtn1, 90, PosY)

End

