    .Columns[0].Alignment = 1
    .Columns[1].Text = "Nom"
    .Columns[1].Alignment = 1
    .Columns[2].Text = "Montant"
    .Columns[2].Alignment = 2
    .Columns[3].Text = "Net N-1"
    .Columns[3].Alignment = 2
    .Columns[4].Text = "% N/N-1"
    .Columns[4].Alignment = 2
