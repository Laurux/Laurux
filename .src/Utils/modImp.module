'Lignes Total bas de facture
Public Sub Level10F(Totht As String, Mtva2 As String, Toteuros As String, Txtleg As String, PosY As Integer, ImpAuto As Boolean, Exo As Boolean, Franchise As Boolean)
  
  Dim TxtAuto As String = "Entreprise non assujettie à TVA, art. 293 B du Code général des impôts."
  Dim TxtAuto2 As String = "Dispensée d'immatriculation en application de l'article L.123-1-1 du Code du commerce."
  Dim Txtexo As String = " Exonération de TVA, article 262 ter I du Code général des impôts."
  
  Draw.font = font["Bitstream Charter"]
  If ImpAuto = False Then
    Draw.Rect(3000, PosY, 660, 140)
    Draw.Rect(3660, PosY, 400, 140)
  Endif
  Draw.Rect(4060, PosY, 740, 140)
  Draw.Font.Bold = True
  Draw.Font.Size = 8
  Draw.Text(Txtleg, 220, PosY)
  If Impauto Or If Franchise Then
    Draw.Text(TxtAuto, 2000, PosY - 320)
  Else
    If Exo = True Then Draw.Text(Txtexo, 3400, PosY - 160)
  Endif
  If Settings["/Soc" & Start.Societe & "/AutoEnt"] Then Draw.Text(TxtAuto2, 2000, PosY - 160)
  Draw.Font.Size = 9
  If Not Impauto And Not Franchise Then
    Draw.Text(Totht, 3020, PosY, 620, 140, 2)
    Draw.Text(Mtva2, 3680, PosY, 360, 140, 2)
  Endif
  Draw.Text(Toteuros, 4080, PosY, 700, 140, 2)
  Draw.Font.Bold = False
  
End

