'---------------------------- Signature ----------------------------------------
Private Sub Draw_Signature()
  
  Dim Postx As Integer
  Dim Posty As Integer
  Dim Signature As Image
  Dim Imagewidth As Integer
  Dim Imageheight As Integer
  Dim imageToPrint As Image
  
  Try Signature = Image.Load("Icones/signature.png")
  Imagewidth = Signature.Width * 4
  Imageheight = Signature.Height * 4
  imageToPrint = Signature.Stretch(Imagewidth, Imageheight, True)
  Postx = 810
  Posty = 6060
  Draw.Image(imageToPrint, Postx, Posty)
  
End
