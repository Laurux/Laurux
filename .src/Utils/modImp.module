  posY = posY + 200
  Draw.Text(adr11, posX, posY)
  posY = posY + 120
  Draw.Text(adr22, posX, posY)
  posY = posY + 120
  Draw.Text(ville, posX, posY)
  Draw.Font.Bold = False
  Draw.font = font["Century Schoolbook L"]
  Draw.Font.Size = 10
  posY = posY + 180
