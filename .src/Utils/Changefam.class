Public Sub art_man()

  Dim rarts As Result

  rarts = Utils.db.Exec("SELECT * FROM Fiches_Art where art_code = &1", code.Text)
  If rarts.Available Then
    With utils
      code.Text = rarts!art_code
      Desg.text = rarts!art_design
      Afam.Text = rarts!art_fam

    End With
    Else
      Desg.Text = "Inconnu"
      Afam.Clear
  Endif

End

