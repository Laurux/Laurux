'******************
'*   On calcule   *
'******************
Public Sub Button2_Click()

  Dim rResult As Result
  Dim Tab As String = "Fiches_Caisses"
  Dim i As Integer

  'on regarde si les caisses sont connectés
  rResult = Utils.db.Exec("SELECT * FROM " & Tab & "")
  If rResult.Available Then
    Repeat
      If rResult!connecte = "1" Then
        message.Warning("Traitement impossible, la caisse numéro " & rResult!code & "est connectée !")
        Return
      Endif
    Until rResult.MoveNext()
  Endif
  'on regarde si les tickets z sont tirés
  For i = 1 To 9
    If Utils.db.Tables.Exist("Fiches_EntTickets" & Str(i)) Then
      rResult = Utils.db.Exec("SELECT * FROM Fiches_EntTickets" & Str(i) & " LIMIT 1 ")
      If rResult.Available Then
        Message.Warning("Traitement impossible, le ticket Z n'est pas tiré")
        Return
      Endif
    Endif
  Next
  'on regarde si le moulinage est fait
  rResult = Utils.db.Exec("SELECT * FROM Fiches_EntTicketz LIMIT 1")
  If rResult.Available Then
    Message.Warning("Traitement impossible, le moulinage n'est pas fait")
    Return
  Endif
  Me.Mouse = Mouse.Wait
  If Cbx.value = True Then
    Cstock.Calc_stock(Textbox1.Text, "")
  Else
    If Cbx2.value = True Then
      If Not IsNull(Textbox2.Text) And Not IsNull(Textbox3.text) Then
        Cstock.Calc_stock(Textbox2.Text, Textbox3.Text)
      Else
        Message.Info("Veuillez saisir les deux bornes SVP !")
      Endif
    Else
      If Cbx3.value = True Then
        Cstock.Calc_stock("", "")
      Else
        If Cbx4.value = True Then
          Utils.db.Exec("LOCK TABLES " & Cbase.Table("TabArt") & " WRITE")
          Utils.db.Exec("UPdate  " & Cbase.Table("TabArt") & "  SET  art_qte = &2 where art_stocke = &1", "0", "0")
          Utils.db.Exec("UNLOCK TABLES")
        Endif
      Endif
    Endif
  Endif
  If Start.son Then
    Music.Play
  Endif
  Me.Mouse = Mouse.Pointing
  Message.Warning("Traitement terminé", "Ok")
  Textbox1.Clear

End

