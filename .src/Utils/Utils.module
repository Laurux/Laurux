Public Function Cdate_calc(Datej As String) As Date

  Dim Dtn As Date
  Dim son As Integer = Start.Son
  Dim dte4 As String
  Dim ye, mo, da As Integer

  Music.Load(Start.Musique)
  If Not IsNull(datej) Then
    dte4 = Format$(Now, "dd.mm.yyyy")
    datej = Replace$(datej, ".", "")
    datej = Replace$(datej, "/", "")
