    If Len(Datej) = 4 Then Datej = Left$(Datej, 4) & Right$(dte4, 4)
    If Len(Datej) = 6 Then Datej = Left$(Datej, 4) & "20" & Right$(Datej, 2)
    Try ye = Right$(Datej, 4)
    Try mo = Mid$(Datej, 3, 2)
    Try da = Left$(Datej, 2)
