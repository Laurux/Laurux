' Gambas class file

Private $grdv As GridView
Private $tab As TabStrip
Private $lab As Label
Private $sdec As String
Private $scode As String
Private $stype As String
Private $ideb As Integer
Private $ifin As Integer

Property code As String
Property dec As String

Public Sub _new(TabStrip1 As TabStrip, type As String)        'dessin du gridview et des colonnes

  Dim res As Result
  Dim sdte As String[]
  Dim i, j As Integer
  Dim pan As Panel
  Dim but As Button

  $stype = Type
  $tab = TabStrip1

  If TabStrip1.Count > 1 Then TabStrip1.Count += 1
  TabStrip1.Current.Text = "Statistiques"

  pan = New Panel(TabStrip1)
  pan.Height = 24
  pan.Width = TabStrip1.Width
  pan.Arrangement = Arrange.Horizontal
  pan.x = 0
  pan.Y = 0

  $lab = New Label(pan)
  $lab.Height = 24
  $lab.text = "TABLEAU COMPARATIF ANNUEL"
  $lab.Alignment = Align.Center
  $lab.AutoResize = True
  $lab.Expand = True
  $lab.Background = &HDFBFFF

  but = New Button(pan) As "bouton"
  but.Height = 24
  but.Text = "Calcul"
  but.AutoResize = True
'  but.Expand = True
  but.Picture = Picture["Icones/find.png"]

  $grdv = New GridView(TabStrip1) As "grdv"
  $grdv.Height = TabStrip1.Height - 30 - 24
  $grdv.Width = TabStrip1.Width - 10
  $grdv.x = 0
  $grdv.y = 25
  $grdv.Font = Font["Serif, -2"]
  $grdv.Header = GridView.Both
  $grdv.ScrollBar = Scroll.Both
  If $stype = "C" Then $grdv.Mode = Select.Multiple

  res = utils.db.Exec("SELECT * FROM Fiches_Parametres")
  If Not res.Available Then Return

  sdte = Split(res!dteclec, "/")
  sdte[2] = Left$(sdte[2], 4)
  $grdv.Columns.Count = 12
  $grdv.Rows.Count = 13

  sdte[2] = calcanne(sdte, res!dtepec)
  affent($grdv, sdte)

  j = sdte[0]
  For i = 0 To 11
    j += 1
    If j = 13 Then j = 1
    $grdv.Rows[i].Text = utils.mois(j)
    $grdv.rows[i].Height = 18

  Next
  $grdv.Rows[12].Text = "TOTAL"
  $grdv.Rows[12].Height = 22
  TabStrip1.Index = 0

End


Public Sub bouton_Click()         'lit et affiche les stat

  Dim respar As Result
  Dim i, j, k As Integer
  Dim smoiscour, smoisprec As String
  Dim dte As String[]
  Dim fsomme As Float
  Dim smois, sanne, scle As String
  Dim dateinf, datesup As String
  Dim tab, tab1, req, cond As String
  Dim dte1 As Date
  
  'On ne lance le calcul de stat uniquement si la "Tab" Statistique est active.
  If $tab.Current.Text <> "Statistiques" Then
    Return
  Endif

  razcol
  $grdv.Parent.Mouse = mouse.Wait
  $lab.text = "CALCUL EN COURS"
  $lab.Background = &HDFBFFF
  razcol
  '                                                             lit les parametres
  respar = utils.db.Exec("SELECT * FROM Fiches_Parametres")
  If Not respar.Available Then Return

  smoiscour = Left(respar!dtepec, 2) & Right(respar!dtepec, 4)
  smoisprec = Left(respar!dtepp, 2) & Right(respar!dtepp, 4)
  dte = Split(respar!dteclec, "/")
  dte[2] = Left$(dte[2], 4)
  dte[2] = calcanne(dte, respar!dtepec)
  '                                                             lit le fichier facture mois par mois
  smois = dte[0]
  If smois = "12" Then
    smois = "01"
    sanne = dte[2]
  Else
    smois = Format(Str(Val(smois) + 1), "00")
    sanne = dte[2] - 1
  Endif

  i = 0
  Repeat
    j = 0
    Repeat

      scle = smois & sanne
      dateinf = sanne & smois & "01"
      dte1 = Date(sanne, Val(smois), 1)
      datesup = sanne & smois & Format(utils.lastday(dte1), "00")
      '      datesup = sanne & "-" & smois & "-" & Str(utils.lastday(CDate(01 & "/" & smois & "/" & sanne)))
      tab = "Fiches_HistoLigfac"
      tab1 = "Fiches_HistoFac"
      For k = 0 To 1
        Select $stype
          Case "F"
            req = "mrgart_ligfac AS marge,mrgmo_ligfac AS margem,netht_ligfac AS ht,qte_ligfac AS qte,typel_ligfac AS type"
            cond = "fam_ligfac=&1 AND numfac=num_ligfac AND typel_ligfac IN('A','M') AND datefac BETWEEN &2 AND &3"
          Case "A"
            req = "mrgart_ligfac AS marge,netht_ligfac AS ht,qte_ligfac AS qte,typel_ligfac AS type"
            cond = "code_ligfac=&1 AND numfac=num_ligfac AND typel_ligfac='A' AND datefac BETWEEN &2 AND &3"
          Case "M"
            req = "mrgmo_ligfac AS margem,netht_ligfac AS ht,qte_ligfac AS qte,typel_ligfac AS type"
            cond = "code_ligfac=&1 and numfac=num_ligfac AND typel_ligfac='M' AND datefac BETWEEN &2 AND &3"
          Case "C"
            req = "mrgart_ligfac AS marge,mrgmo_ligfac AS margem,netht_ligfac AS ht,qte_ligfac AS qte,typel_ligfac AS type"
            cond = "cdclifac=&1 AND numfac=num_ligfac AND typel_ligfac IN('A','M') AND datefac BETWEEN &2 AND &3"

        End Select
        If IsNull($grdv[j, i].Text) Then
          $grdv[j, i].Text = "0.00"
          $grdv[j, i + 1].Text = $sdec
          $grdv[j, i + 2].Text = "0.00"
        Endif
        requete(tab, tab1, req, cond, dateinf, datesup, i, j)
        tab = "Fiches_HistoLigfacM"
        tab1 = "Fiches_HistoFacM"
      Next
      '                                                   lit et additionne les mois en cours dans le fichier bl
      tab = "Fiches_Ligbl"
      tab1 = "Fiches_Bl"
      For k = 0 To 1
        Select $stype
          Case "F"
            req = "mrgart_ligbl AS marge,mrgmo_ligbl AS margem,netht_ligbl AS ht,qte_ligbl AS qte,typel_ligbl AS type"
            cond = "fam_ligbl=&1 and numbl=num_ligbl AND typel_ligbl IN('A','M') AND (type='A' OR type='B' Or type='F') AND datebl BETWEEN &2 AND &3"
          Case "A"
            req = "mrgart_ligbl AS marge,netht_ligbl AS ht,qte_ligbl AS qte"
            cond = "code_ligbl=&1 and numbl=num_ligbl AND typel_ligbl IN('A','M') AND (type='A' OR type='B' Or type='F') AND datebl BETWEEN &2 AND &3"
          Case "M"
            req = "mrgmo_ligbl AS marge,netht_ligbl AS ht,qte_ligbl AS qte"
            cond = "code_ligbl=&1 and numbl=num_ligbl AND typel_ligbl IN('A','M') AND (type='A' OR type='B' Or type='F') AND datebl BETWEEN &2 AND &3"
          Case "C"
            req = "mrgart_ligbl AS marge,mrgmo_ligbl AS margem,netht_ligbl AS ht,qte_ligbl AS qte,typel_ligbl AS type"
            cond = "cdclibl=&1 and numbl=num_ligbl AND typel_ligbl IN('A','M') AND (type='A' OR type='B' Or type='F') AND  datebl BETWEEN &2 AND &3"
        End Select
        requete(tab, tab1, req, cond, dateinf, datesup, i, j)
        tab = "Fiches_LigblM"
        tab1 = "Fiches_BlM"
      Next

      smois = Format(Str(Val(smois) + 1), "00")
      If smois = "13" Then
        smois = "01"
        sanne += 1
      Endif

      j += 1
    Until j = 12

    sanne -= 2
    i += 3
  Until i = 12
  '                                       affiche les totaux de colonne
  For i = 0 To 11
    fsomme = 0
    For j = 0 To 11
      Try fsomme += CFloat(Replace($grdv[j, i].Text, ",", "."))
    Next

    Select i
      Case 1, 4, 7, 10
        $grdv[12, i].Text = Format(fsomme, "######" & $sdec)
      Case Else
        $grdv[12, i].Text = Format(fsomme, "#######0.00")
    End Select

  Next

  $grdv.Parent.Mouse = Mouse.Default
  $lab.text = "TABLEAU COMPARATIF ANNUEL"

End

Private Sub requete(tab As String, tab1 As String, req As String, cond As String, dateinf As String, datesup As String, i As Integer, j As Integer)

  Dim resbl As Result
  Dim k As Integer
  Dim fsomme As Float

  resbl = utils.db.Exec("SELECT " & req & " FROM " & tab & "," & tab1 & " WHERE " & cond, $scode, dateinf, datesup)
  If Not resbl.Available Then Return
  resbl.MoveFirst
  For k = 0 To resbl.Max
    fsomme = 0
    Try fsomme = CFloat(Replace($grdv[j, i].Text, ",", ".")) + CFloat(Trim(Replace(resbl!ht, ",", ".")))
    $grdv[j, i].Text = Format(fsomme, "#######0.00")
    fsomme = 0
    Try fsomme = CFloat(Replace($grdv[j, i + 1].Text, ",", ".")) + CFloat(Trim(Replace(resbl!qte, ",", ".")))
    $grdv[j, i + 1].Text = Format(fsomme, "######" & $sdec)
    fsomme = 0
    If $stype = "F" Or $stype = "C" Then
      If resbl!type = "A" Then
        Try fsomme = CFloat(Replace($grdv[j, i + 2].Text, ",", ".")) + CFloat(resbl!marge)
      Else
        Try fsomme = CFloat(Replace($grdv[j, i + 2].Text, ",", ".")) + CFloat(resbl!margem)
      Endif
    Else
      Try fsomme = CFloat(Replace($grdv[j, i + 2].Text, ",", ".")) + CFloat(resbl!marge)
    Endif
    $grdv[j, i + 2].Text = Format(fsomme, "#####0.00")

    resbl.MoveNext
  Next

End

Private Sub affent($grdv As GridView, sdte As String[])

  Dim i, j, k As Integer

  k = 0
  For i = 0 To 3
    For j = 1 To 3
      $grdv.Columns[k].Alignment = Align.Center
      Select j
        Case 1
          $grdv.Columns[k].Width = 110
          If sdte[0] <> "12" Then
            $grdv.Columns[k].Title = Str(Val(sdte[2]) - i) & "/" & Str(Val(sdte[2]) - (i + 1))
            $grdv.Columns[k].text &= " C.A"
          Else
            $grdv.Columns[k].text = Str(Val(sdte[2]) - i)
            $grdv.Columns[k].text &= " C.A"
          Endif
        Case 2
          $grdv.Columns[k].text = "Quantit√©"
          $grdv.Columns[k].Width = 90
        Case 3
          $grdv.Columns[k].text = "Marge"
          $grdv.Columns[k].Width = 80
      End Select

      k += 1
    Next
  Next

End

Public Sub razcol()

  Dim i, j As Integer

  For i = 0 To 11
    For j = 0 To 12
      $grdv[j, i].text = "0"
      If Even(j) Then
        $grdv[j, i].Background = Color.Background
      Else
        $grdv[j, i].Background = Color.Background - 100
      Endif
      $grdv[j, i].Alignment = Align.Right
      If j = 12 Then $grdv[j, i].Background = &HDFBFFF
    Next
  Next

End

Public Sub grdv_MouseDown()

  $ideb = $grdv.Row

End

Public Sub grdv_MouseUp()

  Dim win As Window
  Dim grdv1 As GridView
  Dim res, resart, restot As Result
  Dim sdte As String[]
  Dim dateinf, datesup As Date
  Dim d1, d2, d3, d4, d5, d6 As Date
  Dim jour, mois, ann As Integer
  Dim i As Integer

  If $stype <> "C" Then
    Stop Event
    Return
  Endif
  $grdv.Mouse = Mouse.wait
  'controle sur le bornage
  $ifin = $grdv.Row
  If $ifin < $ideb Then Swap $ifin, $ideb
  If $ifin = 12 And $ideb = 12 Then
    $ifin = 11
    $ideb = 0
  Endif
  If $ifin = 12 Then $ifin = 11
  'creation de la fenetre et du gridview
  win = New Window
  win.Height = $grdv.Height + 50
  win.Width = $grdv.Width + 50
  win.Arrangement = Arrange.Vertical
  grdv1 = New GridView(win)
  grdv1.Expand = True
  grdv1.Header = GridView.Both
  grdv1.ScrollBar = Scroll.Both
  grdv1.Font = Font["Serif, -2"]
  'calcul sur date et d√©finition des bornes d'interrogation
  res = utils.db.Exec("SELECT * FROM Fiches_Parametres")
  sdte = Split(res!dteclec, "/")
  grdv1.Columns.Count = 12

  sdte[2] = calcanne(sdte, res!dtepec)
  sdte[2] = Left$(sdte[2], 4)
  mois = Val(sdte[0]) + $ideb + 1
  ann = Val(sdte[2]) - 4
  If mois > 12 Then
    mois = mois - 12
    ann += 1
  Endif
  dateinf = Date(ann, mois, 1)

  mois = Val(sdte[0]) + $ifin + 1
  If sdte[0] = "12" Then ann = Val(sdte[2]) Else ann = Val(sdte[2]) - 1
  If mois > 12 Then
    mois = mois - 12
    If sdte[0] <> "12" Then ann += 1
  Endif
  datesup = Date(ann, mois, 1)
  datesup = Date(ann, mois, utils.lastday(datesup))

  jour = utils.lastday(Date(Year(datesup) - 3, Month(datesup), 1))
  d1 = Date(Year(datesup) - 3, Month(datesup), jour)

  d2 = Date(Year(dateinf) + 1, Month(dateinf), 1)
  jour = utils.lastday(Date(Year(datesup) - 2, Month(datesup), 1))
  d3 = Date(Year(datesup) - 2, Month(datesup), jour)

  d4 = Date(Year(dateinf) + 2, Month(dateinf), 1)
  jour = utils.lastday(Date(Year(datesup) - 1, Month(datesup), 1))
  d5 = Date(Year(datesup) - 1, Month(datesup), jour)

  d6 = Date(Year(dateinf) + 3, Month(dateinf), 1)

  win.Text = "Statistiques articles par client pour la p√©riode du " & Format(dateinf, "dd/mm/yyyy") & " au " & Format(datesup, "dd/mm/yyyy")

  Select $stype
    Case "C"
      ' recupere les articles mouvement√©s pendant la p√©riode s√©lectionn√©e
      res = utils.db.Exec( 
      "SELECT art_code FROM " &
        "(SELECT code_ligfac AS art_code " &
          "FROM Fiches_HistoLigfac JOIN Fiches_HistoFac On numfac = num_ligfac " &
          "WHERE cdclifac = &1 And typel_ligfac IN( 'A','M') AND (datefac BETWEEN &2 AND &3 OR datefac BETWEEN &4 AND &5 OR datefac BETWEEN &6 AND &7 OR datefac BETWEEN &8 AND &9) " &
          "GROUP BY art_code " &
        "UNION ALL SELECT code_ligfac AS art_code " &
          "FROM Fiches_HistoLigfacM JOIN Fiches_HistoFacM On numfac = num_ligfac " &
          "WHERE cdclifac = &1 And typel_ligfac IN( 'A','M') AND (datefac BETWEEN &2 AND &3 OR datefac BETWEEN &4 AND &5 OR datefac BETWEEN &6 AND &7 OR datefac BETWEEN &8 AND &9) " &
          "GROUP BY art_code " &
        "UNION ALL SELECT code_ligbl AS art_code " &
          "FROM Fiches_BlM JOIN Fiches_LigblM On numbl = num_ligbl " &
          "WHERE cdclibl = &1 And typel_ligbl IN( 'A','M') AND (type='A' OR type='B' Or type='F') AND (datebl BETWEEN &2 AND &3 OR datebl BETWEEN &4 AND &5 OR datebl BETWEEN &6 AND &7 OR datebl BETWEEN &8 AND &9) " &
          "GROUP BY art_code " &
        "UNION ALL SELECT code_ligbl AS art_code " &
          "FROM Fiches_Bl JOIN Fiches_Ligbl On numbl = num_ligbl " &
          "WHERE cdclibl = &1 And typel_ligbl IN( 'A','M') AND (type='A' OR type='B' Or type='F') AND (datebl BETWEEN &2 AND &3 OR datebl BETWEEN &4 AND &5 OR datebl BETWEEN &6 AND &7 OR datebl BETWEEN &8 AND &9) " &
          "GROUP BY art_code) AS a " &
      "GROUP BY art_code", $scode, Format(dateinf, "yyyymmdd"), Format(d1, "yyyymmdd"), Format(d2, "yyyymmdd"), Format(d3, "yyyymmdd"), Format(d4, "yyyymmdd"), Format(d5, "yyyymmdd"), Format(d6, "yyyymmdd"), Format(datesup, "yyyymmdd"))

  End Select
  'affiche les entetes du gridview
  affent(grdv1, sdte)
  grdv1.Rows.Count = res.Count
  If res.Available Then
    res.MoveFirst
    For i = 0 To res.Max
      resart = utils.db.Exec("SELECT art_design AS design FROM Fiches_Art WHERE art_code=&1", res!art_code)
      If resart.Available Then
        grdv1.Rows[i].Text = resart!design
      Else
        resart = utils.db.Exec("SELECT mo_design AS design FROM Fiches_Mo WHERE mo_code=&1", res!art_code)
        If resart.Available Then grdv1.Rows[i].Text = resart!design Else grdv1.Rows[i].Text = "INCONNU"
      Endif
      
      grdv1.rows[i].Height = 18
      res.MoveNext
    Next

    'affiche les donn√©es
    res.MoveFirst
    For i = 0 To res.Max
      restot = Utils.db.Exec(
      "SELECT mrgart_ligfac AS marge,mrgmo_ligfac AS margem,netht_ligfac AS ht,qte_ligfac AS qte,typel_ligfac AS type " & 
