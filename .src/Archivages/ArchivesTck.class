Public Function cpoint(mtt As String) As String

  Return (Replace$(mtt, ".", ","))

End

Public Sub Form_Open()

  NbEnreg = 0
  Tri = "numero"
  sel = ""
  Tris()
  Deb2()
  Coltk.MoveTo(0, 0)
  Try Coltk.Current.EnsureVisible
  Coltk.SetFocus

End

