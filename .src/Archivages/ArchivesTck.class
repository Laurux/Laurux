Public Sub Deb2()

  TkResult = Utils.db.Exec("select * from " & Cbase.Table("TabHisEntTck") & " where " & Tri & " like  \"%" & sel & "%\" order by " & Tri & " Desc limit " & NbEnreg & ", " & lg & "")
