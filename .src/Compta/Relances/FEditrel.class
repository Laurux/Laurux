    " (compte Char(8) NOT NULL," &
    "rs char(10) ," &
    "intitule char(50) ," &
    "adr1 char(35) ," &
    "adr2 char(35) ," &
    "cp char(10) ," &
    "ville char(35) ," &
    "pays char(35) ," &
