  Tab = "Fiches_Mvt"
  Tab2 = "Fiches_relances"
  Tab3 = "Fiches_Cli"
  '  relances.clear
  '  compteRel.Clear
  Label1.Text = ""
  ' TextLabel2.Text = ""
  Utils.db.Exec("DROP TABLE if exists " & Tab2 & "")
