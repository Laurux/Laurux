Public Sub Button5_Click()

  Dim rResult As Result
  Dim Tab As String
  Dim Tab2 As String
  Dim Tab3 As String
  Dim Compt As String
  Dim num As String

  Tab = "Fiches_Mvt"
  Tab2 = "Fiches_Comptes"
