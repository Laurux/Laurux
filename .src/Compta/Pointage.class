'*****************************
'*    Gestion des touches    *
'*****************************
Public Sub Rlv_KeyPress()

  If Key.code = Key.enter Or Key.code = Key.return Or Key.code = Key.Tab Then

    Select Case Last.tag

      Case 1
        If cpt.Text = "" Then
          If son Then
            Music.Play
          Endif
          Message.Warning("veuillez saisir votre compte SVP !")
          cpt.SetFocus
          cpt.Select
        Else
          cptman()
          If b = 1 Then
            cpt.SetFocus
            cpt.Select
            Stop Event
          Else
            b = 0
            Nrel.SetFocus
            Nrel.Select
          Endif
        Endif
        Stop Event

      Case 2
        Chkfocus = True
        dte.SetFocus
        dte.Select

      Case 3
        dte_LF()
        If b = 1 Then
          dte.SetFocus
          dte.Select
          Stop Event
        Else
          b = 0
          dterappro.SetFocus
          dterappro.Select
          Stop Event
        Endif

      Case 4
        dterappro_LF()
        If b = 1 Then
          dterappro.SetFocus
          dterappro.Select
          Stop Event
        Else
          b = 0
          Sldfinal.SetFocus
          Sldfinal.Select
          Stop Event
        Endif

      Case 5
        Sldfinal_LF()
        If b = 1 Then
          Sldfinal.SetFocus
          Sldfinal.Select
          Stop Event
        Else
          b = 0
          soldedepart.SetFocus
          soldedepart.Select
          Stop Event
        Endif

      Case 6
        soldedepart_LF()
        If b = 1 Then
          soldedepart.SetFocus
          soldedepart.Select
          Stop Event
        Else
          b = 0
          Nrel.SetFocus
          nrel.Select
          Stop Event
        Endif
    End Select
  Endif

  If key.code = key.F1 Then
    Button3_Click()
    Stop Event
  Endif

  If Key.code = Key.F2 Then
    Select Case Last.tag

      Case 1
        ToggleButton3_Click()
        Stop Event

      Case 2
        ToggleButton1_MouseDown()
        Stop Event
    End Select
  Endif

End

'****************************************************
'*      Gestion du focus. Routine de Charlie Reinl  *
'****************************************************
Public Sub Rlv_GotFocus()

  With Utils
    .SetEditColor(Me, Last)
  End With

End

Public Sub Rlv_LostFocus()

  Select Last.tag
    Case 1
      b = 1
      Stop Event

    Case 2
      If Chkfocus = True Then
        If Nrel.Text = "" Then
          If b = 1 Then
            If son Then
              Music.Play
            Endif
            Try message.Info("Veuillez saisir un numéro de relevé SVP !")
            Nrel.SetFocus
          Endif
        Else
          Colrlv_Man()
          b = 0
        Endif
      Endif
      Chkfocus = True
      Stop Event
  End Select

End

Public Sub dte_LF()

  Dim dte2 As String

  b = 0
  With utils
    dte2 = Format$(Now, "yyyy")
    If Len(dte.Text) = 5 Then dte.Text = dte.Text & "." & dte2
    dte.text = .Cdate_calc(dte.text)
    dte.Text = .Cdate_aff(dte.Text)
    If dte.Text = "00.00.0:00" Then
      dte.Text = ""
      B = 1
    Endif
  End With
Catch
  message.Error(Error.Text & " " & Error.where)
  B = 1

End

Public Sub dterappro_LF()

  Dim dte2 As String

  b = 0
  With utils
    dte2 = Format$(Now, "yyyy")
