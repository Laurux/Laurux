'***********************
'* On gere nos touches *
'***********************
Public Sub Bal_KeyPress()

  If Key.code = Key.enter Or Key.code = Key.return Or Key.code = Key.tab Then
    Select Case Last.tag

      Case 1
        dteN0_LF()
        dteN1.SetFocus
        dteN1.Select
        Stop Event

      Case 2
        dteN1_LF()
        Cpt.SetFocus
        Cpt.Select
        Stop Event

      Case 3
        Cpt2.SetFocus
        Cpt2.Select
        Stop Event

      Case 4
        dteN0.SetFocus
        dteN0.Select
        Stop Event

    End Select
  Endif

  If key.code = key.F2 Then
    Select Case Last.tag
      Case 3
        Button4_Click()

      Case 4
        Button5_Click()
    End Select
  Endif

  If key.code = key.F1 Then
    Button3_Click()
    Stop Event
  Endif

End

