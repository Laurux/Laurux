    dte1 = dteN0.Text
    dte2 = dteN1.Text
  End With
  
End

'***********************
'* On gere nos touches *
'***********************
Public Sub Cmpt_KeyPress()
  
  If Key.code = Key.enter Or Key.code = Key.return Or Key.code = Key.Tab Then
    Select Case Last.tag
      Case 1
        ' date de début
        
        dteN0_LostFocus()
        dteN1.SetFocus
        dteN1.Select
        Stop Event
        
      Case 2
        ' date de fin
        dteN1_LostFocus()
        cpt.SetFocus
        cpt.Select
        Stop Event
        
      Case 3
        'compte du debut
        cpt2.SetFocus
        cpt2.Select
        Stop Event
        
      Case 4
        'compte de fin
        dteN0.SetFocus
        dteN0.Select
        Stop Event
    End Select
  Endif
  
  If key.code = key.F1 Then
    Button3_Click()
    Stop Event
  Endif
  
  If key.code = key.F2 Then
    Select Case Last.tag
      Case 3
        ToggleButton3_click()
        Stop Event
        
      Case 4
        ToggleButton2_click()
        Stop Event
    End Select
  Endif
  
End

'***********************
'* On gere nos boutons *
