Public Sub Cmpt_KeyPress()

  If Key.code = Key.enter Or Key.code = Key.return Or Key.code = Key.Tab Then
    Select Case Last.tag

      Case 1
        dteN0_LostFocus()
        dteN1_GotFocus()
        dteN1.SetFocus
        dteN1.Select
        Stop Event

      Case 2
        dteN1_LostFocus()
        Cpt_GotFocus()
        Cpt.SetFocus
        Cpt.Select
        Stop Event

      Case 3
        Cpt_LostFocus()
        Cpt2_GotFocus()
        Cpt2.SetFocus
        Cpt2.Select
        Stop Event

      Case 4
        Cpt2_LostFocus()
        dteN0_GotFocus()
        dteN0.SetFocus
        dteN0.Select
        Stop Event

    End Select
  Endif

  If key.code = key.F1 Then
    Button3_Click()
    Stop Event
  Endif

  If key.code = key.F2 Then
    Select Case Last.tag
      Case 3
        ToggleButton3_Click()
        Stop Event
      Case 4
        ToggleButton2_Click()
        Stop Event
    End Select
  Endif

End

Public Sub Btn_Click()

  Select Case Last.tag

    Case 1
      Button3_Click()

    Case 2
      Button2_Click()

    Case 3
      Button1_Click()

    Case 4
      If Exist(filename) Then Try Kill filename
      Me.Close
  End Select

End

