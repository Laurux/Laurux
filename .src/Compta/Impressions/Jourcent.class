    rResult = Utils.db.Exec("SELECT dtepc FROM " & Tab3 & "")
    dte = rResult!dtepc
    dte = .Cdate_aff(dte)
    If Val(Right$(dteN1.text, 4) & Mid$(dteN1.text, 4, 2) & Left$(dteN1.text, 2)) > Val(Right$(dte, 4) & Mid$(dte, 4, 2) & Left$(dte, 2)) Then
