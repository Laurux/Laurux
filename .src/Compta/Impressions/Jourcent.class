  Endif
  If message.question("Le fichier  extrait.txt  a été correctement copié sous votre répertoire \n Voulez-vous l'ouvrir ?", "Oui", "Non") = 1 Then
    Editeur.Prog_Editeur(Filetxt)
  Endif

