Public Sub Createtable()

  Tab = "centralisation"
  Utils.db.Exec("DROP TABLE IF EXISTS centralisation")
  Try Utils.db.Exec("CREATE TABLE " & Tab &
    "(cd_cent Char(8) NOT NULL," &
    "intitule Char(50)," &
    "db_cent Decimal(12,2)," &
    "crd_cent Decimal(12,2)," &
    "njournal Char(2)," &
    "PRIMARY KEY (cd_cent))" & "ENGINE = MYISAM")

End

Public Sub Button1_Click()

  Dim i As Integer
  Dim rResult As Result
  Dim SteResult As Result
  Dim Nm As Result
  Dim Tab2 As String
  Dim Tab5 As String
  Dim datep As String
  Dim copt As String
  Dim dateedition As String
  Dim p1 As Integer
  Dim Tab3 As String
  Dim Tab4 As String
  Dim Qual As String
  Dim Ccoll As String
  Dim bcol As Boolean = False
  Dim debitcol As String
  Dim creditcol As String
  Dim Ste As String
  Dim Libelle As String
  Dim intitule As String
  Dim Tresorerie As Integer = 0
  Dim Statut As String
  Dim PosY, ipage As Integer
  Dim TotDeb2 As Float
  Dim TotCred2 As Float

  With utils
    totsldhp = 0.00
    Db_Ction = 0
    Cd_Ction = 0
    Solde = 0
    'Totdeb3 = 0
    ' Totcred3 = 0
    Tab = "centralisation"
    Tab2 = "Fiches_Journaux"
    Tab3 = "Fiches_Parametres"
    Tab4 = "Fiches_Societes"
    Tab5 = "Fiches_Comptes"
    p1 = 0
    '  iPage = 1
    Filename = User.Home & "/tmp/Journaux.pdf"
    Journaux.Mouse = Mouse.Wait
    Createtable()
    SteResult = Utils.db.Exec("SELECT * FROM " & Tab4 & " Where cd_sc = &1", Start.Societe)
    Ste = "Société " & " " & SteResult!int_sc
    dateedition = "du " & dteN0.Text & " au " & dteN1.Text
    Shell "cd " & User.Home & ""
    pdf = New Ccompta("Portrait", "mm", "A4")
    pdf.Open()
    pdf.AliasNbPages()
    rResult = Utils.db.Exec("SELECT * FROM " & Tab3 & "")
    dte = rResult!dtepc
    dte = .Cdate_aff(dte)
    If Val(Right$(dteN1.Text, 4) & Mid$(dteN1.Text, 4, 2) & Left$(dteN1.Text, 2)) > Val(Right$(dte, 4) & Mid$(dte, 4, 2) & Left$(dte, 2)) Then
      Qual = " ( Edition provisoire )"
    Else
      Qual = ""
    Endif
    Datep = Now
    Datep = Mid$(Datep, 4, 2) & "-" & Left$(Datep, 2) & "-" & Mid$(Datep, 7, 4)
    ' If RadioButton1 Then
    If Toutes.value Then
      rResult = Utils.db.Exec("SELECT * FROM " & Tab1 & " WHERE  dte >= &1 and  dte <= &2 and supprimee is not true or dte >= &1 and  dte <= &2 and supprimee is true  order by " & Ordre & " ", Utils.Cdate_Dbase(dteN0.Text), Utils.Cdate_Dbase(dteN1.Text), False, True)
    Else
      rResult = Utils.db.Exec("SELECT * FROM " & Tab1 & " WHERE  dte >= &1 and  dte <= &2 and " & type & "  order by  " & Ordre & "", Utils.Cdate_Dbase(dteN0.Text), Utils.Cdate_Dbase(dteN1.Text), False, True)
    Endif
    If rResult.count <> 0 Then
      i = 0
      pdf.Entete("Impression des écritures modifiées du " & DteN0.Text & " au " & Dten1.text)
      pdf.Level1M()
      posy = 32
      If IsNull(Qual) Then
        copt = rResult!numerodef
        If Settings["/Soc" & Start.Societe & "/Gestion"] Then copt = rResult!numero
      Else
        copt = rResult!numero
      Endif
      While i < rResult.count
        Try Bcol = rResult!collectif
        If Error Then Bcol = False
        If Bcol Then
          Ccoll = rResult!compte
        Endif
        Nm = Utils.db.Exec("SELECT * FROM " & Tab5 & " WHERE compte_cc = &1", rResult!compte)
        If Not Nm.Available Then
          Message.Error("Le compte " & rResult!compte & " n'existe pas ! Veuillez créer ce compte avant d'imprimer vos journaux SVP !")
          Return
        Endif
        If Nm!comptr_cc <> 0 Then
          Tresorerie = 1
          Intitule = Nm!intitule_cc
        Else
          Tresorerie = 0
        Endif
        If Not Bcol Then
          debit = rResult!montantd
          credit = rResult!montantc
          solde = solde + debit - credit
          totdeb = totdeb + debit
          totcred = totcred + credit
          totsld = totdeb - totcred
          dte = .CDate_Aff(rResult!dte)
          dte = Left(dte, 6) & Right(dte, 2)
        Else
          debitcol = rResult!montantd
          creditcol = rResult!montantc
          totdeb = totdeb + rResult!montantd
          totcred = totcred + rResult!montantc
        Endif
        If Not rResult!supprimee Then
          Statut = "M"
        Else
          Statut = "S"
        Endif
        If Settings["/Soc" & Start.Societe & "/Gestion"] Then
          If rResult!numero <> copt Then
            pdf.Lines(posY)
          Endif
        Else
          If IsNull(Qual) Then
            If rResult!numerodef <> copt Then
              pdf.Lines(posY)
            Endif
          Else
            If rResult!numero <> copt Then
              pdf.Lines(posY)
            Endif
          Endif
        Endif
        If IsNull(Qual) Then
          copt = rResult!numerodef
          If Settings["/Soc" & Start.Societe & "/Gestion"] Then copt = rResult!numero
        Else
          copt = rResult!numero
        Endif
        If Not Bcol Then
          If Left$(rResult!compte, 3) = "401" Or If Left$(rResult!compte, 3) = "411" Or If Left$(rResult!compte, 3) = "453" Then
            If Left$(rResult!libelle, 3) = "Fac" Then
              Libelle = "Facture"
            Else
              If Left$(rResult!libelle, 3) = "Avo" Then
                Libelle = "Avoir"
              Else
                Libelle = rResult!libelle
              Endif
            Endif
            If type_jour = "VE" And Left$(Libelle, 6) <> "Caisse" Then Libelle = libelle & " " & rResult!numdoc
            pdf.level2M(rResult!intitule, rResult!compte, dte, copt, Libelle, rResult!montantd, rResult!montantc, solde, posy, Statut, Format$(rResult!datem, "dd.mm.yy"))
          Else
            Libelle = rResult!libelle
            If Tresorerie = 1 Then
              pdf.level2M(Intitule, rResult!compte, dte, copt, Libelle, rResult!montantd, rResult!montantc, solde, posy, Statut, Format$(rResult!datem, "dd.mm.yy"))
            Else
              pdf.level2M(rResult!intitule, rResult!compte, dte, copt, Libelle, rResult!montantd, rResult!montantc, solde, posy, Statut, Format$(rResult!datem, "dd.mm.yy"))
            Endif
          Endif
          posy += 5
          Inc p1
          totdeb2 = totdeb2 + rResult!montantd
          totcred2 = totcred2 + rResult!montantc
        Endif
        i = i + 1
        If posy > 283 Then
          pdf.Baspage2(ipage)
          pdf.Entete("Impression des écritures modifiées du " & DteN0.Text & " au " & Dten1.text)
          pdf.Level1M()
          p1 = 0
          posy = 32
          copt = ""
          Inc iPage
        Endif
        rResult.MoveNext
      Wend
      totdeb = totdeb + debhp
      totcred = totcred + credhp
      totsld = totdeb - totcred
      If p1 <= 40 Then
        pdf.Lines(posY)
      Endif
      posy += 2
      posy += 4
      Totdeb2 = 0
      Totcred2 = 0
      raz()
      pdf.BasPage2(ipage)
      iPage = 1
      raz()
      Solde = 0
      pdf.Output(Filename, False)
      Visualiseur.Prog_Editeur(Filename)
      Journaux.Mouse = Mouse.Default
    Else
      Message.Warning("Aucune écriture pour cette sélection !")
    Endif
  End With

End

