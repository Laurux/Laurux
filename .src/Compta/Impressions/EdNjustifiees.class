  Me.Center
  Bclient_Click()
  jour = Format$(Now, "dd.mm.yyyy")

End

'***********************
'* On gere nos touches *
'***********************
Public Sub Cmpt_KeyPress()

  If Key.code = Key.enter Or Key.code = Key.return Or Key.code = Key.Tab Then
    Select Case Last.tag

      Case 1
        'compte du debut
        cpt_LostFocus()
        cpt2_GotFocus()
        cpt2.SetFocus
        cpt2.Select
        Stop Event

      Case 2
        'compte de fin
        cpt2_LostFocus()
        cpt_GotFocus()
        cpt.SetFocus
        cpt.Select
        Stop Event
    End Select
  Endif

  If key.code = key.F1 Then
    Button3_Click()
    Stop Event
  Endif

  If key.code = key.F2 Then
    Select Case Last.tag
      Case 3
        ToggleButton1_click()
        Stop Event

      Case 4
        ToggleButton2_click()
        Stop Event
    End Select
  Endif

End

'***********************
'* On gere nos boutons *
'***********************
Public Sub Btn_Click()

  Select Case Last.tag

    Case 1

    Case 2
      'On imprime
      Button1_Click()

    Case 3
      ' On ferme
      Me.Close

  End Select

End

