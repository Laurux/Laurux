'*   On imprime   *
'******************
Public Sub Button1_Click()

  Dim p As Integer
  Dim Intit As String
  Dim dateedition As String
  Dim SteResult As Result
  Dim aResult As Result
  Dim Ste As String
  Dim Deb As String
  Dim Cred As String
  Dim Libel As String
  Dim Lib As String
  Dim Nbpage As Integer
  Dim None As Boolean = False
  Dim Ecr As Boolean = False

  Nbpage = 1
  Shell "cd " & User.Home & ""
  Filename = User.Home & "/tmp/Extrait.pdf"
  pdf = New Ccompta("Portrait", "mm", "A4")
  pdf.Open()
  pdf.AliasNbPages()
  dte = Format$(Now, "dd.mm.yyyy")
  totsldhp = 0.00
  Tab1 = "Ctrlnc"
  Tab2 = "Fiches_Comptes"
  p = 0
  SteResult = Utils.db.Exec("SELECT * FROM " & Cbase.Table("TabSoc") & " Where cd_sc = &1", Start.Societe)
  Ste = "Société " & " " & SteResult!int_sc
  dateedition = "du " & dteN0.Text & " au " & dteN1.Text
  pdf.Entete("Extrait de compte analytique")
  posy = 26
  pdf.level0C(dateedition, Ste)
  pdf.level1CA()
  posy = posy + 5
  p = 6
  Me.Mouse = Mouse.Wait
  With Utils
    rrResult = Utils.db.Exec("SELECT  compte_cc, intitule_cc, cent_cc  FROM " & Cbase.Table("TabComptes") & " WHERE cast(compte_cc AS char) >= &1  and cast(compte_cc AS char) <= &2  and type_cc = &4 order by cast(compte_cc AS char)", cpt.text, cpt2.text, 0, type)
    If rrResult.Available Then
      Repeat
        compt = rrResult!compte_cc
        Intit = rrResult!intitule_cc
        Centr = rrResult!cent_cc
        aResult = Utils.db.Exec("SELECT * FROM " & Cbase.Table("TabAna") & " Where compte = &1", compt)
        If aResult.Available Then
          rResult = Utils.db.Exec("SELECT * FROM " & Cbase.Table("TabMvtA") & " WHERE compte = &1  and validee = &2  and dte >= &3 and dte <= &4 order by dte ", compt, 1, .Cdate_dbase(dten0.Text), .Cdate_dbase(dten1.Text))
          If rResult.count <> 0 Then
            None = False
            Ecr = True
            Utils.db.Exec("drop Table IF exists " & Tab1 & "")
            Utils.db.Exec("CREATE TABLE IF NOT EXISTS " & Tab1 &
              "(compte Char(8) NOT NULL," &
              "intitule Char(30)," &
              "jour Char(2)," &
              "Mois Char(6) NOT NULL," &
              "libelle Char(30) ," &
              "dte Char(10) ," &
              "montantd Decimal(12,2)," &
              "montantc Decimal(12,2)," &
              "PRIMARY KEY (compte, Mois))" & Utils.db.Engine())
            If PosY >= 273 Then
              pdf.Baspage()
              pdf.Entete("Extrait de compte analytique")
              posy = 26
              pdf.level0C(dateedition, Ste)
              pdf.level1CA()
              posy = posy + 5
            Endif
            pdf.level3C(Compt, Intit, Posy)
            posy = posy + 5
            p = p + 1
            Repeat
              'IF .Cdate_Comp(rResult!dte) >= .Cdate_dbase(dten0.Text) AND .Cdate_Comp(rResult!dte) <= .Cdate_dbase(dten1.Text) THEN
              If Centr = False Then
                debit = rResult!montantd
                credit = rResult!montantc
                solde = solde + debit - credit
                totdeb = totdeb + debit
                totcred = totcred + credit
                totsld = totdeb - totcred
                dte = .Cdate_Aff(rResult!dte)
                dte = Left(dte, 6) & Right(dte, 2)
                pdf.level2CA(rResult!libelle, rResult!jour, dte, rResult!numero, rResult!numdoc, Format$(debit, ",0.00"), Format$(credit, ",0.00"), Format$(solde, ",0.00"), posy)
                posy = posy + 5
                Lib = rResult!libelle
                If PosY >= 273 Then
                  pdf.Baspage()
                  pdf.Entete("Extrait de compte")
                  posy = 26
                  pdf.level0C(dateedition, Ste)
                  pdf.level1CA()
                  posy = posy + 5
                Endif
              Else
                libelle = rResult!libelle
                jour = rResult!jour
                Datj = .Cdate_Aff(rResult!dte)
                montantd = rResult!montantd
                montantc = rResult!montantc
                centralisation()
              Endif
            Until rResult.MoveNext()
            ' On récupere le solde des comptes centralisés
            If Centr = True Then
              Libel = ""
              libelle = "Centralisation"
              CResult = Utils.db.Exec("SELECT * FROM " & Tab1 & " WHERE compte = &1 Order by Mois", Compt)
              If CResult.Available Then
                Repeat
                  Deb = CResult!montantd
                  Cred = CResult!montantc
                  dte = Cresult!dte
                  Mois = cresult!Mois
                  dte = Right$(dte, 2) & "." & Mid$(dte, 5, 2) & "." & Left$(dte, 4)
                  Totdeb = Totdeb + Deb
                  Totcred = Totcred + cred
                  Totsld = Totsld + deb - cred
                  pdf.level2CA(libelle, jour, dte, "", "", Deb, Cred, Format(Totsld, ",0.00"), posy)
                  PosY += 5
                  If PosY >= 273 Then
                    pdf.Baspage()
                    pdf.Entete("Extrait de compte")
                    posy = 26
                    pdf.level0C(dateedition, Ste)
                    pdf.level1CA()
                    posy = posy + 5
                  Endif
                  Inc p
                Until CResult.MoveNext()
              Endif
            Endif
            totdeb = totdeb
            totcred = totcred
            totsld = totsld + totsldhp
            Slddeb = Slddeb + Totdeb
            Sldcred = Sldcred + Totcred
            Sldtot = Slddeb - Sldcred
            PosY += 5
            pdf.level4C(totdeb, totcred, totsld, Posy)
            PosY += 5
            pdf.Lines(posy)
            PosY += 5
            If PosY >= 273 Then
              pdf.Baspage()
              pdf.Entete("Extrait de compte")
              posy = 26
              pdf.level0C(dateedition, Ste)
              pdf.level1CA()
              posy = posy + 5
            Endif
          Else
            None = True
          Endif
          raz()
        Endif
      Until rrResult.MoveNext()
      If Ecr = True Then
        PosY += 14
        pdf.level5C(Slddeb, Sldcred, Sldtot, Posy)
        posy += 5
        pdf.Lines(posy)
        pdf.Baspage()
        pdf.Output(Filename, False)
        Impression.Prog_Editeur(Filename)
      Else
        If None = True And Ecr = False Then
          If son Then
            Music.Play
          Endif
          message(" Aucune ecriture pour cette demande", "OK")
        Endif
      Endif
    Else
      If son Then
        Music.Play
      Endif
      message(" Aucune ecriture pour cette demande", "OK")
    Endif
    Slddeb = 0
    Sldcred = 0
    Sldtot = 0
  End With
  Me.Mouse = Mouse.Pointing

End

'**************************************************
'*     Gestion de la centralisation si besoin     *
'**************************************************
Public Sub Centralisation()

  Dim Libel As String
  Dim Jrs As Date
  Dim jrs1 As String

  Tab1 = "Ctrlnc"
  Libel = "Centralisation"
  jrs = Date(Right$(Datj, 4), Format$(Val(Mid$(Datj, 4, 2)), "00"), 01)
  Mois = Right$(Datj, 4) & Mid$(Datj, 4, 2)
  Jrs1 = finmois(jrs)
  Jrs1 = Right$(Datj, 4) & Format$(Val(Mid$(Datj, 4, 2)), "00") & Jrs1
  With utils
    CResult = Utils.db.Exec("SELECT * FROM " & Tab1 & " WHERE compte = &1 and Mois = &2", Compt, Mois)
    If CResult.Available Then
      Mnt = montantd + cResult!montantd
      Mnt1 = montantc + cResult!montantc
      Utils.db.Exec("Update " & Tab1 & " set montantd = &2, montantc = &3, dte = &5 Where compte = &1 and Mois = &4", Compt, Mnt, Mnt1, Mois, Jrs1)
    Else
      Utils.db.Exec("INSERT INTO " & Tab1 & "(compte,intitule,dte,libelle, montantd, montantc, jour, Mois) VALUES (&1, &2, &3, '" & Libel & "', &5, &6, &7, &8)", Compt, intituleCpt, Jrs1, Jrs1, montantd, montantc, jour, Mois)
    Endif
  End With

End

'****************************************
'*    Calcul du dernier jour du mois    *
'****************************************
Public Function finmois(Jrs As Date) As Integer

  Dim Jrs1 As Integer

  If Month(Jrs) < 12 Then
    Jrs1 = Day(Date(Year(Jrs), Month(Jrs) + 1, 1) - 1)
  Else
    Jrs1 = Day(Date(Year(Jrs) + 1, 1, 1) - 1)
  Endif
  Return Jrs1

End

