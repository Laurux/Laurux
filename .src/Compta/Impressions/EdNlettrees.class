'*****************************************
'*    On genere les dates de travail     *
'*****************************************
Public Sub Ex1()
  
  Tab = "Fiches_Parametres" 
  With utils
    rResult = Utils.db.Exec("SELECT * FROM " & Tab & "")
    dte = rResult!dteclec1
