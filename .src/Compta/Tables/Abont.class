Public Sub Cmpt_GotFocus()

  With Utils
    .SetEditColor(Me, Last)
  End With

End

'******************************
'*      Perte du focus
'******************************
Public Sub Cmpt_Keypress()

  Dim hForm As FCalc

  If Key.code = Key.enter Or Key.code = Key.return Or Key.code = Key.Tab Then
    Select Case Last.tag
      Case 2
        Compte.SetFocus

      Case 3
        Compteman()
        If b = 0 Then
          Montant.SetFocus
          Montant.Select
        Else
          Compte.Select
          Compte.SetFocus
          b = 0
        Endif
        Stop Event
      Case 4
        Button7.SetFocus
        Stop Event
    End Select
  Else
    If Last.tag = 4 Then ChkPrx()
  Endif

  If Key.code = Key.F5 Then
    hForm = New FCalc
    hForm.Showmodal()
    If Not IsNull(FCalc.Resultat) Then Montant.text = Format$(Val(FCalc.Resultat), "0.00")
  Endif

  If key.code = key.F2 Then
    Select Case Last.tag
      Case 3
        Button6_Click()
    End Select
  Endif

End

Public Sub ChkPrx()

  If InStr("0123456789,.", Key.Text) = 0 Then
    If key.code <> key.BackSpace And Key.Code <> Key.tab And Key.Code <> Key.Delete And Key.code <> Key.enter And Key.code <> Key.return Then
      Stop Event
    Endif
  Endif

End

