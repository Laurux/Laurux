'***********************
'* On gere nos touches *
'***********************
Public Sub Cmpt_KeyPress()
  
  Dim hForm As Lettrage
  
  If Key.code = Key.enter Or Key.code = Key.return Or Key.code = Key.Tab Then
    Select Case Last.tag
        
      Case 1
        dteN0_LF()
        dteN1.SetFocus
        dteN1.Select
        Stop Event
        
      Case 2
        dteN1_LF()
        cpt.SetFocus
        cpt.Select
        Stop Event
        
      Case 3
        cpt_LF()
        If b = 0 Then compteman()
        If b = 0 Then
          dteN0.SetFocus
          dteN0.Select
        Else
          cpt.SetFocus
          cpt.Select
          b = 0
        Endif
        Stop Event
        
    End Select
  Endif
  
  If key.code = key.F1 Then
    Button5_Click()
    Stop Event
  Endif
  
  If key.code = key.F2 Then
    Select Case Last.tag
      Case 3
        Button7_click()
        Stop Event
    End Select
  Endif
  
  If Key.code = key.F4 Then
    Select Case Last.tag
        
      Case 3
        hForm = New Lettrage(cpt.Text, type)
        hForm.Showmodal()
        Stop Event
    End Select
  Endif 
  
End

