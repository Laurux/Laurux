Public Sub Journaux_KeyPress()
  
  If key.code = key.Return Or If key.code = key.Enter Then
    Journaux.item.Selected = True
    Journaux_click()
  Endif
  
End

Public Sub Journaux_click()
  
  If message.Question("Attention ! Vous aller remplacer le numéro de journal " & sJournal & " par le numéro de journal " & Journaux.Current[0], "Oui", "Non") = 1 Then
    Utils.db.Exec("Update " & Cbase.Table("TabMvt") & " set jour = &1 Where numero = &2", Journaux.Current[0], sNumero)
    Journaux.Visible = False
    affichage()
    Necrit.Visible = False
    Njour.Visible = False
  Endif
  
End
