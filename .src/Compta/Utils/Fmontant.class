    .SetEditColor(Me, Last)
  End With

End

Public Sub Button6_Click()

  Me.Close

End

Public Sub Button2_Click()

  Dim Tab As String
  Dim Tab2 As String

  Tab = "Fiches_Mvt"
  Tab2 = "Fiches_Comptes"
  Somme.clear
  Me.Mouse = Mouse.Wait
  If Not Cb1.Value And Not Cb2.Value Then
    Message.Warning("Veuillez saisir un critère de recherche SVP", "Ok")
  Else
    If Cb1.value And Not Mnt.Text And Not Cb2.value Then ' On controle qu'un montant soit saisit
      Message.Warning("Veuillez saisir un montant SVP", "Ok")
      Mnt.SetFocus
      Mnt.Select
      libelle.Text = ""
    Else
      If Cb1.value And Mnt.Text And Not Cb2.value Then 'on recherche seulement un montant
        libelle.Text = ""
        If Btous.Value Then Tcpt = Utils.db.Exec("SELECT * FROM " & tab2 & " where coll = &1", "0")
        If Bclient.value Then Tcpt = Utils.db.Exec("SELECT * FROM " & tab2 & " where type_cc = &1", "C")
        If Bfournisseur.value Then Tcpt = Utils.db.Exec("SELECT * FROM " & tab2 & " where type_cc = &1", "F")
        If Bgestion.value Then Tcpt = Utils.db.Exec("SELECT * FROM " & tab2 & " where type_cc = &1", "G")
        If Bbilan.value Then Tcpt = Utils.db.Exec("SELECT * FROM " & tab2 & " where type_cc = &1 and coll = &2", "B", "0")
        If Tcpt.Available Then
          Repeat
            rResult = Utils.db.Exec("SELECT * FROM " & tab & " where compte = &1 and montantd like '" & Utils.PointBase(Mnt.Text) & "%' and validee = &2  or compte = &1 and montantc like '" & Utils.PointBase(Mnt.Text) & "%' and validee = &2", Tcpt!compte_cc, 1)
            If rResult.Available Then
              Repeat
                Affichage()
              Until rResult.MoveNext()
            Endif
          Until Tcpt.Movenext()
        Endif
      Endif
    Endif
    If Cb2.Value And Not libelle.Text And Not Cb1.Value Then ' On controle qu'un libelle soit saisit
      Message.Warning("Veuillez saisir un libellé SVP", "Ok")
      Mnt.Text = ""
      libelle.SetFocus
      libelle.Select
    Else
      If Cb2.Value And libelle.Text And Not Cb1.Value Then 'on recherche seulement les libelles
        Mnt.Text = ""
        If Btous.Value Then Tcpt = Utils.db.Exec("SELECT * FROM " & tab2 & " where coll = &1", "0")
        If Bclient.value Then Tcpt = Utils.db.Exec("SELECT * FROM " & tab2 & " where type_cc = &1", "C")
        If Bfournisseur.value Then Tcpt = Utils.db.Exec("SELECT * FROM " & tab2 & " where type_cc = &1", "F")
        If Bgestion.value Then Tcpt = Utils.db.Exec("SELECT * FROM " & tab2 & " where type_cc = &1", "G")
        If Bbilan.value Then Tcpt = Utils.db.Exec("SELECT * FROM " & tab2 & " where type_cc = &1 and coll = &2", "B", "0")
        If Tcpt.Available Then
          Repeat
            rResult = Utils.db.Exec("SELECT * FROM " & tab & " where compte = &1 and libelle like '" & libelle.Text & "%' and validee = &2 ", Tcpt!compte_cc, 1)
            If rResult.Available Then
              Repeat
                Affichage()
              Until rResult.MoveNext()
            Endif
          Until Tcpt.Movenext()
        Endif
      Endif
    Endif
    If Cb1.Value And Cb2.Value And Not Mnt.Text Then 'on controle qu'un montant soit saisit
      Message.Warning("Veuillez saisir un montant SVP", "Ok")
      Mnt.SetFocus
      Mnt.Select
    Else
      If Cb1.Value And Cb2.Value And Not libelle.Text Then ' Idem pour le libelle
        Message.Warning("Veuillez saisir un libellé SVP", "Ok")
        libelle.SetFocus
        libelle.Select
      Endif
    Endif
    If Cb1.Value And Cb2.Value And Mnt.Text And libelle.Text Then 'on recherche un montant et un libelle
      If Btous.Value Then Tcpt = Utils.db.Exec("SELECT * FROM " & tab2 & " where coll = &1", "0")
      If Bclient.value Then Tcpt = Utils.db.Exec("SELECT * FROM " & tab2 & " where type_cc = &1", "C")
      If Bfournisseur.value Then Tcpt = Utils.db.Exec("SELECT * FROM " & tab2 & " where type_cc = &1", "F")
      If Bgestion.value Then Tcpt = Utils.db.Exec("SELECT * FROM " & tab2 & " where type_cc = &1", "G")
      If Bbilan.value Then Tcpt = Utils.db.Exec("SELECT * FROM " & tab2 & " where type_cc = &1 and coll = &2", "B", "0")
      If Tcpt.Available Then
        Repeat
          rResult = Utils.db.Exec("SELECT * FROM " & tab & " where compte = &1 and montantd like '" & Utils.PointBase(Mnt.Text) & "%' and validee = &2 and libelle like '" & libelle.Text & "%' or compte = &1 and montantc like '" & Utils.PointBase(Mnt.Text) & "%' and validee = &2 and libelle like '" & libelle.Text & "%' order by dte", Tcpt!compte_cc, 1)
          If rResult.Available Then
            Repeat
              Affichage()
            Until rResult.MoveNext()
          Endif
        Until Tcpt.Movenext()
      Endif
    Endif
  Endif
  Me.Mouse = Mouse.Pointing
  Necrit.Visible = False
  Message.Info("Traitement terminé !")

End

Public Sub affichage()

  With Utils
    Somme.Add(rResult.Index & rResult!compte, rResult.Index & rResult!compte)
    Somme.Item[0] = .Cdate_Aff(rResult!dte)
    Somme.Item[1] = rResult!compte
    Somme.Item[2] = rResult!libelle
    Somme.Item[3] = rResult!numdoc
    Somme.Item[4] = rResult!numero
    Somme.Item[5] = Format$(rResult!montantd, "0.00")
    Somme.Item[6] = Format$(rResult!montantc, "0.00")
    Somme.Item[7] = rResult!jour
    Somme.Item[8] = rResult!tresorerie

  End With

End

Public Sub Somme_Click()

  Dim Mvt As Result
  Dim TabM As String

  TabM = "Fiches_Mvt"
  Mvt = Utils.db.Exec("SELECT * FROM " & tabM & " where numero = &1 ", Somme.Item[4])
  If Mvt!cloturee = True Then
    cloturee = 1
    If son Then
      Music.Play
    Endif
    Try Message.Error("Modification impossible, cette écriture est cloturée")
  Else
    cloturee = 0
    Necrit.Visible = True
  Endif

End

'*********************************************
'           On modifie l'écriture             *
'*********************************************
Public Sub Necrit_Click()

  Dim hForm As Saisecrit
  Dim hForm2 As Tresor

  tresr = Somme.Current[8]
  If Cloturee = 0 Then
    If tresr = False Then
      hForm = New Saisecrit(Somme.Current[4], Me.Parent, True)
      hForm.Showmodal()
    Else
      hForm2 = New Tresor(Somme.Current[4])
      hForm2.Showmodal()
    Endif
    Me.Mouse = Mouse.Wait
    Csolde.Recalc_solde()
    Me.mouse = Mouse.Default
    Me.Show
    Button2_Click()
  Else
    If Son Then
      Music.Play
    Endif
    Message.Delete("Vous ne pouvez pas modifier une écriture cloturée !")
  Endif

End

