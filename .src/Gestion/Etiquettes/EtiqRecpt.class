Public Sub _New()

  Dim Frmt As New String[]

  Me.Center

  Music.Load(Start.Musique)
  Frmt = Utils.FColr(Start.LocalSettings["/Coul/Znaff"])
  CoulZnaf = Val(Frmt[0])
  Frmt = Utils.FColr(Start.LocalSettings["/Coul/Focus"])
  Coulfc = Val(Frmt[0])
  Frmt = Utils.FColr(Start.LocalSettings["/Coul/Znss"])
  CoulZns = Val(Frmt[0])
  Utils.Observers(Me)
  If Start.LocalSettings["/Soc" & Start.Societe & "/Impetiq"] = "2- Zebra" Then Zbra.Value = True
  If Start.LocalSettings["/Soc" & Start.Societe & "/Impetiq"] = "1- A4" Then A4.Value = True
  If Start.LocalSettings["/Soc" & Start.Societe & "/Impetiq"] = "3- Dymo" Then Dymo.value = True
  Me.Center
  init_ComboBox()
  Calc_Etiq()

End

Public Sub init_ComboBox()

  Dim retiq As Result
  Dim Tab As String = "Fiches_Etiquettes"

  Codetiq.clear
  Try rEtiq = Utils.db.Exec("SELECT * FROM " & Tab & " ")
  If Not Error Then
    If rEtiq.Available Then
      Do
        Codetiq.Add(rEtiq!code & " - " & rEtiq!libelle & " (" & rEtiq!page & ")")
      Loop Until rEtiq.MoveNext()
    Endif
    Codetiq.Text = ""
  Endif

End

Public Sub Calc_Etiq()

  Dim retiq As Result
  Dim Tab As String

  Nbetip.Text = "0"
  Nbetic.Text = "0"
  Nbetig.Text = "0"
  Tab = "Fiches_EtiProd"
  retiq = Utils.db.Exec("SELECT * FROM " & Tab & " order by code")
  If retiq.count <> 0 Then
    Repeat
      Nbetip.Text = Val(Nbetip.Text) + retiq!nombre
      Nbetic.Text = Val(Nbetic.Text) + retiq!nombre
    Until retiq.MoveNext()
  Else
    Nbetip.text = retiq.count
    Nbetic.text = retiq.count
  Endif
  Tab = "Fiches_EtiGond"
  retiq = Utils.db.Exec("SELECT * FROM " & Tab & " order by code")
  If retiq.count <> 0 Then
    Repeat
      Nbetig.Text = Val(Nbetig.Text) + retiq!nombre
    Until retiq.MoveNext()
  Else
    Nbetig.text = retiq.count
  Endif

End

Public Sub Button2_Click()

  Dim rarts As Result
  Dim rTvav As Result
  Dim etiqr As Result
  Dim retiq As Result
  Dim Tab As String
  Dim Tab2 As String
  Dim code As String
  Dim barcode, casier As String
  Dim intitule As String
  Dim intitule2 As String
  Dim Fami As String
  Dim fourn As String
  Dim pvht As String
  Dim tva As String
  Dim pvttc As String
  Dim dte As String
  Dim nbdec As String
  Dim nbd As String
  Dim rect As String
  Dim i As Integer
  Dim stock As Float
  Dim PageA As String[]
  Dim FontRatio As Float

  If IsNull(codetiq.text) Then
    Message.Warning("Veuillez selectionner un modèle d'étiquettes SVP !")
    Return
  Endif
  i = 1
  i2 = 0
  Nbetiq = 1
  rect = String$(70, " ")
  Tab = "Fiches_Etiquettes"
  If Codetiq.Text <> "" Then
    Etiqr = Utils.db.Exec("SELECT * FROM " & tab & " WHERE code = &1", Left$(Codetiq.Text, 1))
    If Etiqr.Available Then
      Nblargeur = Etiqr!nblargeur
      Nbhauteur = Etiqr!nbhauteur
      Largeur = Etiqr!largeur / 10
      Hauteur = Etiqr!hauteur / 10
      Mrghaut = Etiqr!mrghaut / 10
      Mrgauche = Etiqr!mrgauche / 10
      Esplargeur = Etiqr!esplargeur / 10
      Esphauteur = Etiqr!esphauteur / 10
      Page = Etiqr!page
      PageA = Split(Page, " ")
    Endif
    txtPosX = 2 + Mrgauche
    txtPosY = Mrghaut
    If Val(Posetiq.Text) > 1 Then
      For i = 1 To Val(Posetiq.text) - 2
        pos_Etiq()
        Inc Nbetiq
        pdf.Code(code, txtPosX, txtPosY)
      Next
    Endif
    Shell "cd " & User.Home & ""
    Filename = User.Home & "/tmp/EtiqRecpt.pdf"
    'Ci-dessous il faudrait plutot s'appuyer sur les classe Etiqart/Etigond/Eticasier plutot que de reecrire le code ici...
    'C'est pas propre
    Try Kill Filename
    If A4.Value Then pdf = New CEtiquettes(PageA[1], "mm", PageA[0])
    If Dymo.Value Then
      pdf = New CEtiquettes("Portrait", "mm", "dymog")
      'On devrait plutot retrouver ces parametres dans la base, voir a remonter la taille depuis la classe PDFWriter
      Hauteur = 35.0
      Largeur = 88.0
      Mrghaut = 0
      Mrgauche = 0
      txtPosX = 2
      txtPosY = 0
    Endif
    If Dymo.Value And Eticas.value Then
      pdf = New CEtiquettes("Portrait", "mm", "dymoc")
      'On devrait plutot retrouver ces parametres dans la base, voir a remonter la taille depuis la classe PDFWriter
      Hauteur = 25.0
      Largeur = 25.0
      Mrghaut = 0
      Mrgauche = 0
      txtPosX = 2
      txtPosY = 0
    Endif
    pdf.Open()
    pdf.NewPage()
    SorP = False
    dte = Format$(Now, "dd.mm.yyyy")
    Tab2 = "Fiches_Art"
    If Etiprod.value Or If Eticas.value Then
      Tab = "Fiches_EtiProd"
    Else
      Tab = "Fiches_EtiGond"
    Endif
    Me.Mouse = Mouse.Wait
    retiq = Utils.db.Exec("SELECT * FROM " & Tab & " order by code")
    If retiq.Available Then
      Repeat
        rarts = Utils.db.Exec("SELECT * FROM " & Tab2 & " WHERE art_code = &1", retiq!code)
        If Not rarts.Available Then rarts = Utils.db.Exec("SELECT * FROM " & Tab2 & " WHERE art_cfour = &1", retiq!code)
        code = rarts!art_code
        intitule = rarts!art_design
        intitule2 = rarts!art_design2
        barcode = rarts!art_cbarre
        Stock = rarts!art_qte
        fami = rarts!art_fam
        fourn = rarts!art_four
        nbd = rarts!art_nbd
        nbdec = Utils.Find_nbdec(nbd)
        pvht = Format$(rarts!art_pvht, nbdec)
        casier = rarts!art_casier
        If Len(pvht) - InStr(pvht, ",") = 2 Then pvht = pvht & " "
        tva = rarts!art_tva
        rTvav = Utils.db.Exec("SELECT * FROM " & Cbase.Table("TabTvav") & " WHERE code_tva = &1", tva)
        tva = rTvav!taux_tva & " %"
        pvttc = Format$(rarts!art_pvttc, nbdec)
        If Len(pvttc) - InStr(pvttc, ",") = 2 Then pvttc = pvttc & " "
        'On imprime
        txtBarcode = barcode
        For i = 1 To retiq!nombre
          pos_Etiq()
          FontRatio = Largeur / 100.0
          If Etiprod.value = True Then
            'pdf.Rectangle2(txtPosX, txtPosY, Largeur, Hauteur)
            pdf.Code(code, txtPosX, txtPosY + (1 * FontRatio), FontRatio + 0.3)
            pdf.IntituleA(Left(Intitule, Round(85 * FontRatio)), txtPosX, txtPosY + (5 * FontRatio), FontRatio + 0.3)
            pdf.IntituleA(Left(Intitule2, Round(90 * FontRatio)), txtPosX, txtPosY + (9 * FontRatio), FontRatio + 0.2)
            If Not IsNull(Barcode) Then
              pdf.Barcode(Barcode, txtPosX + 2, txtPosY + (Hauteur / 2) - (Hauteur / 8), (Hauteur / 3), (Largeur - 6), FontRatio)
            Endif
            If EtiqPrix.Value Then
              'On booste un peu le Prix TTC sur les etiquettes articles (logiquement petite)
              pdf.PrixTTC(Pvttc, txtPosX + ((Largeur / 6) + 1), txtPosY + (Hauteur - (12 * FontRatio)), FontRatio + 0.6)
            Endif
          Else
            If Etigond.value Then
              'pdf.Rectangle2(txtPosX, txtPosY, Largeur, Hauteur)
              pdf.Code(code, txtPosX, txtPosY, FontRatio)
              pdf.IntituleA(Intitule, txtPosX, txtPosY + (3 * FontRatio), FontRatio)
              pdf.IntituleA(Intitule2, txtPosX, txtPosY + (6 * FontRatio), FontRatio)
              If Not IsNull(Barcode) And If Len(Barcode) = 13 Then
                pdf.Barcode(Barcode, txtPosX + 2, txtPosY + ((Hauteur / 2) - (Hauteur / 6)), (Hauteur / 3), (Largeur - 6), FontRatio)
              Endif
              pdf.Tva(Tva, txtPosX + 2, txtPosY + (Hauteur - (12 * FontRatio)), FontRatio)
              pdf.Rectangle2(txtPosX + 1, txtPosY + (Hauteur - (8 * FontRatio)), (Largeur - 2), (7 * FontRatio))
              pdf.PrixHt(Pvht, txtPosX + 2, txtPosY + (Hauteur - (7 * FontRatio)), FontRatio)
              pdf.PrixTTC(Pvttc, txtPosX + ((Largeur / 2) + 1), txtPosY + (Hauteur - (7 * FontRatio)), FontRatio)
            Else 'Casier
              If A4.Value Then 'PDF Standard
                FontRatio = Largeur / 100.0
                'pdf.Rectangle2(txtPosX, txtPosY, Largeur, Hauteur)
                pdf.casier(casier, txtPosX, txtPosY + (2 * FontRatio), FontRatio + 0.3)
                pdf.Code(code, txtPosX, txtPosY + (8 * FontRatio), FontRatio + 0.3)
                pdf.Intitule(Left$(Intitule, 45), txtPosX, txtPosY + (12 * FontRatio), FontRatio)
                If Not IsNull(Barcode) And If Len(Barcode) = 13 Then
                  pdf.Barcode(Barcode, txtPosX + 2, txtPosY + ((2 * Hauteur) / 3) - (Hauteur / 6), (Hauteur / 3), (Largeur - 6), FontRatio)
                Endif
                pdf.stock(Stock, txtPosX + (Largeur / 2) + 1, txtPosY + ((Hauteur) - (5 * FontRatio)), FontRatio + 0.3)
              Else 'Dymoc
                FontRatio = Largeur / 50.0
                pdf.casierc(casier, txtPosX, txtPosY + (6 * FontRatio), FontRatio + 0.4)
                pdf.Codec(code, txtPosX, txtPosY + (14 * FontRatio), FontRatio + 0.3)
                pdf.Intitulec(Left$(Intitule, 25), txtPosX, txtPosY + (17 * FontRatio), FontRatio + 0.3)
                If Not IsNull(Barcode) And If Len(Barcode) = 13 Then
                  pdf.Barcode(Barcode, txtPosX, txtPosY + ((2 * Hauteur) / 3) - (Hauteur / 7), (Hauteur / 6), (Largeur - 6), FontRatio)
                Endif
                pdf.stockc(stock, txtPosX, txtPosY + (35 * FontRatio), FontRatio + 0.3)
              Endif
            Endif
          Endif
          Inc Nbetiq
        Next
      Until retiq.MoveNext()
      pdf.Output(Filename, False)
      Visualiseur.Prog(Filename)
      If son Then
        Music.Play
      Endif
      Button4_Click()
      EtiqRecpt.visible = True
    Else
      If son Then
        Music.Play
      Endif
      message(" Aucun article pour cette demande", "OK")
    Endif
  Endif
  Me.Mouse = Mouse.Pointing

End

Public Sub pos_Etiq()

  If A4.Value Then
    If Nbetiq = 1 Then
      txtPosY = Mrghaut
      txtPosX = 2 + Mrgauche
    Else
      txtPosX = 2 + Mrgauche + ((Largeur + Esplargeur) * (Nbetiq - 1))
    Endif
    If Nbetiq > Val(Nblargeur) Then
      Nbetiq = 1
      txtPosX = 2 + Mrgauche
      txtPosY = txtPosY + Hauteur + Esphauteur
      Inc i2
      If i2 >= Val(Nbhauteur) Then
        pdf.NewPage()
        i2 = 0
        Nbetiq = 1
        txtPosX = 2 + Mrgauche
        txtPosY = Mrghaut
      Endif
    Endif
  Else
    If Nbetiq > 1 Then
      pdf.NewPage()
      i2 = 0
      Nbetiq = 1
      txtPosX = 2 + Mrgauche
      txtPosY = Mrghaut
    Endif
  Endif

End

