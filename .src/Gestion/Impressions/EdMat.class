Public Sub Aff_Marques()

  Dim Rmarques As Result

  Tab = "Fiches_Marques"
  With Utils
    If ColMarque.visible Then
      ColMarque.clear
      ColMarque.visible = False
    Else
      If origine = "1" Then
        ColMarque.x = 0
        ColMarque.Y = 12
      Else
        ColMarque.x = ToggleButton5.x
        ColMarque.Y = 12
      Endif
      ColMarque.visible = True
      ColMarque.Columns.count = 2
      ColMarque.Columns[0].Width = 65
      ColMarque.Columns[1].Width = 280
      ColMarque.Columns[0].Text = "code"
      ColMarque.Columns[1].Text = "Intitulé"
      Rmarques = Utils.db.Exec("SELECT * FROM " & Tab & " order by code")
      If Rmarques.Available Then
        Repeat
          ColMarque.Add(Rmarques!code, Rmarques!code)
          ColMarque.Item[0] = Rmarques!code
          ColMarque.Item[1] = Rmarques!intitule
        Until Rmarques.MoveNext()
      Endif
      If ColMarque.Count Then
        ColMarque.MoveFirst
        ColMarque.SetFocus
        ColMarque.Item.Selected = True
      Endif
    Endif
  End With

End

Public Sub ColMarque_Click()

  If origine = "1" Then
    Marque.Text = ColMarque.Item[1]
    Marque2.Select
    Marque2.SetFocus
  Else
    Marque2.Text = ColMarque.Item[1]
    Type.Select
    Type.SetFocus
  Endif
  ColMarque.clear
  ColMarque.visible = False

End

Public Sub Btn_Click()

  Select Case Last.tag

    Case 1
      Button1_Click()

    Case 2
      Button2_Click()

    Case 3
      If Exist(filename) Then Try Kill filename
      Me.Close

  End Select

End

Public Sub Btn_KeyPress()

  Select Case Last.tag
    Case 2
      Button2_Click()
  End Select

End

Public Sub Cmpt_KeyPress()

  If Key.code = Key.enter Or Key.code = Key.return Or Key.code = Key.Tab Then
    Select Case Last.tag
      Case 1
        mat_man()
        If b = 1 Then
          mat.SetFocus
          mat.Select
          b = 0
        Else
          mat2.SetFocus
          mat2.Select
        Endif
        Stop Event

      Case 2
        mat_man()
        If b = 1 Then
          mat.SetFocus
          mat.Select
          b = 0
        Else
          Cli.SetFocus
          Cli.Select
        Endif
        Stop Event

      Case 3
        Cli2.SetFocus
        Cli2.Select
        Stop Event

      Case 4
        Marque.SetFocus
        Marque.Select
        Stop Event

      Case 5
        Marque2.SetFocus
        Marque2.Select
        Stop Event

      Case 6
        Button2.SetFocus
        Stop Event
    End Select
  Endif

  If key.code = key.F1 Then
    Button1_Click()
    Stop Event
  Endif

  If key.code = key.F2 Then
    Select Case Last.tag
      Case 1
        ToggleButton1_Click()
        Stop Event
      Case 2
        ToggleButton2_Click()
        Stop Event
      Case 3
        ToggleButton3_Click()
        Stop Event
      Case 4
        ToggleButton4_Click()
        Stop Event
      Case 5
        ToggleButton5_Click()
        Stop Event
      Case 6
        ToggleButton6_Click()
        Stop Event
    End Select
  Endif

End

