'**********************************Impression du tarif*****************************
'*************************Trie et calcul************************
Public Sub Butimp_Click()

  Dim resart, res As Result
  Dim img, cle As String
  Dim tva, ttc, droit As Float
  Dim nego As Boolean = False
  Dim sdp As Boolean
  Dim Filename As String
  Dim dr, ss As String
  Dim prt As New Printer
  
  Filename = User.Home & "/tmp/tarif.pdf"
  prt.OutputFile = Filename
  
  If TreeView1.MoveFirst() Then Return
  entete
  tetedecolone
 
  Repeat
    If TreeView1.Item.Selected Then
      If IsNull(TreeView1.Item.ParentKey) Then 
        If sdp Then sautdepage
        entetefamille
        sdp = True 
      Endif
      resart = Utils.db.Exec("SELECT art_code,art_design,art_prvt,art_pvht,taux_tva,art_fam,art_photo FROM Fiches_Art,Fiches_Tvaav WHERE code_tva=art_tva AND art_fam=&1 AND art_suspendu=&2 AND art_four BETWEEN &3 AND &4 AND art_code BETWEEN &5 AND &6", TreeView1.Item.Key, False, four.Text, four2.Text, Art.Text, Art2.Text)
      If resart.Available Then
        resart.MoveFirst
        ligne("Sous Famille", TreeView1.Item.Text, " ", " ", " ", "", $coul, "5mm")
        Repeat
          tva = 0
          ttc = 0
          droit = 0
          dr = ""
          ss = ""
          $tarif = New TarArt(resart!art_code, Textcli.Text, Me, Textyp.Text, "")
          $tarif.Hide
          If (Checkneg.Value And $tarif.nego) Or Not Checkneg.Value Then
            If Phot.Value Then img = resart!art_photo Else img = ""
            If $soption = "B" Or $soption = "T" Then
              If Not IsNull($tarif.cdr) Then
                tva = $tarif.cdr.tva
                droit = $tarif.cdr.droit + $tarif.cdr.secu
                If $tarif.cdr.droit = 0 Then dr = " " Else dr = Format($tarif.cdr.droit, "0.00")
                If $tarif.cdr.secu = 0 Then ss = " " Else ss = Format($tarif.cdr.secu, "0.00")
              Endif
            Endif
            tva += $tarif.prixht * (Utils.totobs([resart!taux_tva]) / 100)
            ttc = $tarif.prixht + droit + tva
            If $soption = "B" Or $soption = "T" Then
              ligne(resart!art_code, resart!art_design, Format($tarif.prixht, "0.000"), Format(tva, "0.00"), Format(ttc, "0.00"), img, Color.White, "4mm", dr, ss)
            Else
              ligne(resart!art_code, resart!art_design, Format($tarif.prixht, "0.000"), Format(tva, "0.00"), Format(ttc, "0.00"), img, Color.White, "4mm")
            Endif
          Endif
        Until resart.MoveNext()
      Endif
    Endif
  Until TreeView1.MoveBelow()
  $rpt.Print(prt)
  Visualiseur.Prog(Filename)
  
End


