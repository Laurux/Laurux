  lab.Alignment = Align.Left
  lab.Border = ReportBorder["Right:1pt #000000"]
  lab.Font = font["Serif,-3"]
  lab.Width = $width
  
  lab = New ReportLabel(hb)
  lab.Text = lib
  lab.Alignment = Align.Left
  lab.Border = ReportBorder["Right:1pt #000000"]
  lab.Font = font["Serif,-3"]
  lab.Expand = True
  
  lab = New ReportLabel(hb)
  lab.Text = ht
  lab.Alignment = Align.Right
  lab.Border = ReportBorder["Right:1pt #000000"]
  lab.Font = font["Serif,-3"]
  lab.Width = $width
  
  If $soption = "B" Or $soption = "T" Then
    lab = New ReportLabel(hb)
    lab.Text = dr
    lab.Alignment = Align.Right
    lab.Border = ReportBorder["Right:1pt #000000"]
    lab.Font = font["Serif,-3"]
    lab.Width = $width
    
    lab = New ReportLabel(hb)
    lab.Text = ss
    lab.Alignment = Align.Right
    lab.Border = ReportBorder["Right:1pt #000000"]
    lab.Font = font["Serif,-3"]
    lab.Width = $width
  Endif
  
  lab = New ReportLabel(hb)
  lab.Text = tva
  lab.Alignment = Align.Right
  lab.Border = ReportBorder["Right:1pt #000000"]
  lab.Font = font["Serif,-3"]
  lab.Width = $width
  
  lab = New ReportLabel(hb)
  lab.Text = ttc
  lab.Alignment = Align.Right
  lab.Font = font["Serif,-3"]
  lab.Width = $width
  
  If Phot.Value Then
    If Imag Then
      ph = New ReportImage(hb)
      ph.Image = Image.Load(imag)
      ph.Stretch = Report.Fill
      ph.Width = "30mm"
      ph.Height = "30mm"
      hb.Height = "30mm"
    Else
      lab.Border = ReportBorder["Right:1pt #000000"]
