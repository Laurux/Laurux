Public Sub Colcli_Click()
  
  Select Case Org
    Case "Cli1"  
      Cli.Text = Colcli.Item[0]
      Colcli.clear
      Colcli.visible = False
      Cli2.Select
      Cli2.SetFocus
      
    Case "Cli2" 
      Cli2.Text = Colcli.Item[0]
      Colcli.clear
      Colcli.visible = False
      Stat1.Select
      Stat1.SetFocus
      
    Case "Stat1" 
      Stat1.Text = Colcli.Item[0]
      Colcli.clear
      Colcli.visible = False
      Stat2.Select
      Stat2.SetFocus
      
    Case "Stat2" 
      Stat2.Text = Colcli.Item[0]
      Colcli.clear
      Colcli.visible = False
      Type1.Select
      Type1.SetFocus
      
    Case "Type1" 
      Type1.Text = Colcli.Item[0]
      Colcli.clear
      Colcli.visible = False
      Type2.Select
      Type2.SetFocus
      
    Case "Type2" 
      Type2.Text = Colcli.Item[0]
      Colcli.clear
      Colcli.visible = False
      cli.Select
      cli.SetFocus
  End Select
  
End

