      pdf.Level3B(Numfacture, datecreation, adresse, datech, montant, Posy)
      PosY += 4
      If PosY >= 268 Then
        pdf.Baspage()
        pdf.Entete(Type)
        posx = 40
        posy = 16
        pdf.Level1B(Resoc, "Emetteur " & Emetteur, Resoc & Dombq, CodeBanque, cguichet, Numcompte, "Référence remise : " & reference, "Code entrée : ", Posy)
