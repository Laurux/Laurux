Public Sub Deb2()

  Enrg = 0
  If N.Value = True Then Utils.Base(ColLcr, "select * from Fiches_Lcr where banque = " & "0" & "  and ecartee = " & 0 & " and bordereau = " & 0 & " order by " & Tri & ", 1")
  If A.Value = True Then
    If IsNull(BQ.text) Then
      Utils.Base(ColLcr, "select * from Fiches_Lcr where banque <> " & "0" & "  and ecartee <> " & 1 & "  and bordereau = " & 0 & " order by " & Tri & ",1 ")
      Der = Utils.db.Exec("SELECT Count(*) as nb  FROM Fiches_Lcr where banque <> " & "0" & "  and acceptee <> " & 1 & "  and ecartee <> " & 1 & "  and bordereau = " & 0 & "")
      Enrg = der!nb
    Else
      Utils.Base(ColLcr, "select * from Fiches_Lcr where banque = " & Left$(BQ.Text, 1) & "  and ecartee <> " & 1 & "  and bordereau = " & 0 & " order by " & Tri & ", 1 ")
      Der = Utils.db.Exec("SELECT Count(*) as nb  FROM Fiches_Lcr where banque = " & Left$(BQ.Text, 1) & " and ecartee <> " & 1 & "  and bordereau = " & 0 & " order by " & Tri & ", 1 ")
      Enrg = der!nb
    Endif
  Endif
