    Me.Background = Val(Frmt[0])
  Else
    Coulfc = &HAAFF7F&
  Endif
  Music.Load(Start.Musique)
  Me.Center
  code.reg = "4*1*1*[0-9]{0,5}"
  dte.Dat = True
  datee.Dat = True
  montant.numerique = True
  Montant.nbdec = "2"
  ch = New Chainage([code, nom, Dte, datee, numfac, montant, Button3])
  Entete()
  Try rbq = Utils.db.Exec("SELECT * FROM Fiches_Lcr ")
  Nb = rBq.count

End

Public Sub Form_Open()

  Tri = "date"
  Tris()
  Deb2()
  'Total()
  bq.Clear
  BQ2.Clear
  BQ.Add("")
  BQ2.Add("")
  Try rbq = Utils.db.Exec("SELECT * FROM Fiches_Banques ")
  If Not Error Then
    If rBq.Available Then
      Do
        Try BQ.Add(rBq!banques_code & " - " & rBq!banques_nom)
        Try BQ2.Add(rBq!banques_code & " - " & rBq!banques_nom)
      Loop Until rBq.MoveNext()
    Endif
  Endif
  code.SetFocus
  code.Select

End

