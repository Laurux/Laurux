Public Sub Total()

  Dim ikey As Integer = 0
  Dim b As Boolean = False
  Dim Nb, der As Integer = 0
  Dim Tot As Float = 0

  With Utils
    Repeat
      ColLcr.MoveTo(ikey, 0)
      If Not Error Then
        If ikey = Enrg Then
          Break
          Enrg = 0
        Endif
        Try Tot = Tot + Val(Utils.cpoint(ColLcr[ColLcr.row, 5].Text))
        If Error Then
          B = True
        Else
          Inc nb
        Endif
      Else
        B = True
      Endif
      Inc ikey
      'If ikey > 2 Then b = True
    Until b <> False
    Nb2.Text = nb
    Mt2.Text = Format$(Tot, "0.00")
  End With
Catch
  Music.Play
  Try message.Error(Error.Text & " " & Error.where)

End

