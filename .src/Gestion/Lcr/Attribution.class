Public Sub ColLcr_Data(Row As Integer, Column As Integer)

  With Utils
    Lcrtable[0] = "code"
    Lcrtable[1] = "nom"
    Lcrtable[2] = "date"
    Lcrtable[3] = "datech"
    Lcrtable[4] = "numfac"
    Lcrtable[5] = "montant"
    Lcrtable[6] = "banque"
    Lcrtable[7] = "acceptee"
    Lcrtable[8] = "lind"
    .rs1.MoveTo(Row)
    Try ColLcr.data.Text = Str(.rs1[Lcrtable[Column]])
    If Column = 2 Then
      ColLcr.data.Text = Replace$(ColLcr.data.Text, "/", ".")
      ColLcr.data.Text = Left$(ColLcr.data.Text, 10)
    Endif
    If Column = 3 Then
      ColLcr.data.Text = Replace$(ColLcr.data.Text, "/", ".")
      ColLcr.data.Text = Left$(ColLcr.data.Text, 10)
    Endif
    If column = 5 Then ColLcr.Data.Alignment = 2
    If column = 6 Then
      If ColLcr.Data.Text <> "0" Then
        rbq = Utils.db.Exec("SELECT * FROM Fiches_Banques where banques_code = &1", ColLcr.data.Text)
        If rBq.Available Then ColLcr.data.Text = ColLcr.data.Text & " - " & rBq!banques_nom
      Else
        ColLcr.Data.Text = ""
      Endif
    Endif
    If column = 7 Then ColLcr.Data.Alignment = 3
    If column = 7 Then
      If ColLcr.data.Text = "1" Then
        ColLcr.data.Text = "X"
      Else
        ColLcr.data.Text = ""
      Endif
    Endif
  End With

End

