Public Sub _New()
  
  Dim Frmt As New String[]
  Dim rResult As Result
  
  Me.Center
  
  Music.Load(Start.Musique)
  Frmt = Utils.FColr(Settings["/Coul/Znaff"])
  CoulZnaf = Val(Frmt[0])
  Frmt = Utils.FColr(Settings["/Coul/Focus"])
  Coulfoc = Val(Frmt[0])
  Frmt = Utils.FColr(Settings["/Coul/Znss"])
  CoulZns = Val(Frmt[0])
  If Settings["/Soc" & Start.Societe & "/Coul_fen"] Then Utils.Observers(Me)
  If CheckType.value = False Then
    Radiobutton2.Visible = False
    Panel3.Visible = False
  Endif
  If CheckCp.value = False Then
    Radiobutton3.Visible = False
    Panel2.Visible = False
  Endif
  Type.Text = "00000"
  Type2.Text = "ZZZZZ"
  client1.Text = "41100001"
  client2.Text = "4119999999"
  Cp1.text = "01000"
  Cp2.Text = "94738"
  client1.Select
  client1.SetFocus
  SetObservers(Me, Me)
  Utils.Observers(Me)
  Try rResult = Utils.db.Exec("SELECT * FROM " & Cbase.Table("TabStatut") & " ")
  If Not Error Then
    If rResult.Available Then
      Do
        Try Statut.Add(rResult!code & " - " & rResult!libelle)
      Loop Until rResult.MoveNext()
      Statut.Add(" ", "00")
    Endif
  Endif
  
End

Public Sub Form_Open()
  
  If IsNull(Settings["/Smtp"]) Or If IsNull(Settings["Port"]) Or If IsNull(Settings["/Adrmail"]) Then
    Message.Error("Veuillez vérifier la configuration de vos coordonnées mail dans les préférences SVP !")
    Me.close
  Endif
  
End

