  Frmt = Utils.FColr(Start.LocalSettings["/Coul/Focus"])
  Coulfoc = Val(Frmt[0])
  Frmt = Utils.FColr(Start.LocalSettings["/Coul/Znss"])
  CoulZns = Val(Frmt[0])
