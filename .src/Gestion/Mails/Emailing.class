Public Sub ChkInput()

  If InStr("0123456789", Key.Text) = 0 Then
    If key.code <> key.BackSpace And Key.Code <> Key.tab And Key.Code <> Key.Delete And Key.code <> Key.enter And Key.code <> Key.return Then
      Stop Event
    Endif
  Endif

End

Public Sub Etiq_KeyPress()

  If Key.code = Key.enter Or Key.code = Key.return Or Key.code = Key.Tab Then
    Select Case Last.tag

      Case 1
        If Liste.Value = False Then
          Cli_man()
          Client2.SetFocus
          Client2.Select
        Else
          Cli_man()
        Endif
        Stop Event

      Case 2
        If CheckType.Value = True Then
          Type.SetFocus
          Type.Select
        Else
          If CheckCp.Value = True Then
            Cp1.SetFocus
            Cp1.Select
          Endif
        Endif
        Stop Event

      Case 3
        Type2.SetFocus
        Type2.Select
        Stop Event

      Case 4
        If CheckCp.Value = True Then
          Cp1.SetFocus
          Cp1.Select
        Endif
        Stop Event

      Case 5
        If Not IsNull(Cp1.text) And If Len(Cp1.text) = 5 Then
          Cp2.SetFocus
          Cp2.Select
        Endif
        Stop Event

      Case 8
        Button2.SetFocus
        Stop Event

    End Select
  Else
    Select Case Last.Tag
      Case 7
        ChkInput()

      Case 8
        ChkInput()
    End Select
  Endif

  If key.code = key.F2 Then
    Select Case Last.Tag

      Case 1
        ToggleButton1_Click()
        Stop Event

      Case 2
        ToggleButton2_Click()
        Stop Event

      Case 3
        ToggleButton3_Click()
        Stop Event

      Case 4
        ToggleButton4_Click()
        Stop Event
    End Select
  Endif

  If key.code = key.F1 Then
    Button1_Click()
    Stop Event
  Endif

End

