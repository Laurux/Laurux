Tri As String = ""

Public Sub _New()

  Dim Frmt As New String[]

  Utils.db.Exec("drop Table IF exists " & Cbase.Table("TabArtSaisis") & "")
  Utils.db.Exec("CREATE TABLE " & Cbase.Table("TabArtSaisis") &
    "(code Char(15) NOT NULL," &
    "PRIMARY KEY (code))" & Utils.db.Engine())
  Me.Center
  Music.Load(Start.Musique)
  Frmt = Utils.FColr(Start.LocalSettings["/Coul/Znaff"])
  CoulZnaf = Val(Frmt[0])
  Frmt = Utils.FColr(Start.LocalSettings["/Coul/Focus"])
  Coulfc = Val(Frmt[0])
  Frmt = Utils.FColr(Start.LocalSettings["/Coul/Znss"])
  CoulZns = Val(Frmt[0])
  Utils.Observers(Me)
  Try Identifiant.Text = Start.LocalSettings["/Soc" & Start.Societe & "/Identifiant"]
  Try Adradminart.Text = Start.LocalSettings["/Soc" & Start.Societe & "/Adradminart"]
  Try Adradminphot.Text = Start.LocalSettings["/Soc" & Start.Societe & "/Adradminphot"]
  Try Mdpadmin.Text = Start.LocalSettings["/Soc" & Start.Societe & "/Mdpadmin"]
  Me.Center
  HFil = Open User.Home & "/Prd.csv" For Write Create
  HFil2 = Open User.Home & "/Photo.csv" For Write Create
  Art.Text = "00000"
  Art.Select
  Art.SetFocus

End

