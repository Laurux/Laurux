End

Public Sub Ref()
  
  Tab = "Fiches_Cpostaux"
  Tri = "cp"
  CleanChamps()
  Tris()
  
End

Public Sub Dbclk()
  
  If Not Dbl Then
    Deb3()
    Dbl = "1"
  Else
    Deb2()
    Dbl = ""
  Endif
  
End

Public Sub Colcpost_Click()
  
