Public Sub entete()

  CO.Text = "Client"
  FA.Text = "Famille"
  Rem.text = "Remise"

End

Public Sub Co_GotFocus()

  sel = ""
  Ref()
  Dbl = ""
  entete()
  Co.Text = ""
  Tri = "codec"
  Deb2()

End

Public Sub Co_Dblclick()

  sel = ""
  Ref()
  entete()
  Co.Text = ""
  Tri = "codec"
  Dbclk()

End

Public Sub Co_KeyPress()

  If Key.code = Key.Return Or Key.code = Key.Enter Then
  Else
    If key.code = key.backspace Then
      sel = Left$(sel, (Len(sel) - 1))
    Else
      sel = sel & key.Text
    Endif
    Deb2()
  Endif

End

Public Sub Cdf_GotFocus()

  sel = ""
  Dbl = ""
  Ref()
  entete()
  Cdf.Text = ""
  Tri = "codef"
  Deb2()

End

Public Sub Cdf_Dblclick()

  sel = ""
  Ref()
  entete()
  Cdf.Text = ""
  Tri = "codef"
  Dbclk()

End

Public Sub Cdf_KeyPress()

  If Key.code = Key.Return Or Key.code = Key.Enter Then
  Else
    If key.code = key.backspace Then
      sel = Left$(sel, (Len(sel) - 1))
    Else
      sel = sel & key.Text
    Endif
    Deb2()
  Endif

End

Public Sub Dbclk()

  If Not Dbl Then
    Deb3()
    Dbl = "1"
  Else
    Deb2()
    Dbl = ""
  Endif

End

Public Sub Ref()

  Tri = "codec"
  CleanChamps()
  Tris()

End

