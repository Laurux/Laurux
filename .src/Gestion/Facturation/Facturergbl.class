Public Sub Calc_tva()

  Dim Mtva As String
  Dim Mtva2 As String
  Dim Mttc2 As String
  Dim Mht As String
  Dim Ttx As String
  Dim Tva As String
  Dim CResult As Result
  Dim entf As String
