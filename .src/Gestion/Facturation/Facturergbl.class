      Mttc2 = Format$(Val(Mttc), "0" & " " & devises)
      Toteuros = Format$(Toteuros, "0")
    Else
      Mttc2 = Mttc & " " & devises
      Toteuros = Format$(Toteuros, "0.00")
    Endif
    pdf.Level10F(Toteuros, Tva, Mttc2, Txtleg, PosY - 6, "", "", "")
    'PosY = PosY + 3
    'If Start.LocalSettings["/Soc" & Start.Societe & "/Coupon"] Then pdf.Level15F(CCli, Nfac, Toteuros, PosY, Devises)
    PosY = PosY + 8
    pdf.Level11F(Txtleg2, PosY)
    Nlgn = "0000"
    Totht = "0"
