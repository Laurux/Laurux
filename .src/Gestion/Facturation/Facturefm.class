Public Sub recup_bl()
  
  Dim Tab1 As String
  Dim Tab3 As String
  Dim Tab4 As String
  Dim Client As Result
  Dim Bl As Result
  Dim totf As Result
  Dim Total, totalttc As String
  Dim dteN As String
  Dim Tab As String = "Fiches_Bl"
  
  Tab1 = "Fiches_Ligbl"
  Tab3 = "Facturefm"
  Tab4 = "Bl"
  Total = "0"
  Utils.db.Exec("drop Table IF exists " & Tab3 & "")
  Utils.db.Exec("CREATE TABLE " & Tab3 &
    "(code Char(8) NOT NULL," &
    "nom Char(35)," &
    "cp Char(5)," &
    "adr1 Char(35)," &
    "adr2 Char(35)," &
    "ville Char(35)," &
    "totf Char(12)," &
    "tottc Char(12)," &
    "PRIMARY KEY (code, nom))" & "ENGINE = MYISAM")
  Utils.db.Exec("drop Table IF exists " & Tab4 & "")
  Utils.db.Exec("CREATE TABLE " & Tab4 &
    "(num Char(12) NOT NULL," &
    "code Char(10)," &
    "nom Char(35)," &
    "date date," &
    "ht Char(12)," &
    "ttc Char(12)," &
    "PRIMARY KEY (num))" & "ENGINE = MYISAM")
  dteN = Right$(datej.Text, 4) & Mid$(datej.Text, 4, 2) & Left$(datej.Text, 2)
  If Radiobutton1.Value = True Then
    codeclient.Background = &HD4D0C8& '&HF9F9BD&
    Client = Utils.db.Exec("SELECT * FROM " & Tab & " Left join " & Cbase.Table("TabCli") & " on cli_code = cdclibl where type = &1 and totalht <> &3 and datebl <= &4 and cli_div = &6 or type = &2 and totalht <> &3 and datebl <= &4 and imp <> &5 and cli_div = &6 order by cdclibl, numbl", "B", "F", 0, dteN, 1, Divers.value)
  Else
    Client = Utils.db.Exec("SELECT * FROM " & Tab & " Left join " & Cbase.Table("TabCli") & " on cli_code = cdclibl where cdclibl = &1 and type = &2 and totalht <> &4 and datebl <= &5 and cli_div = &7  or cdclibl = &1 and type = &3 and totalht <> &4 and datebl <= &5 and imp <> &6 and cli_div = &7  order by cdclibl, numbl", codeclient.Text, "B", "F", 0, dteN, 1, Divers.value)
  Endif
  If Client.Available Then
    Codecli = Client!cdclibl
    Nomcli = Client!nmclibl
    adr1 = Client!adr1bl
    adr2 = Client!adr2bl
    cpcli = Client!cpbl
    villecli = Client!villebl
    Repeat
      If Divers.value And Codecli <> Client!cdclibl Or If Divers.value And Nomcli <> Client!nmclibl Then
        Nomcli = Client!nmclibl
        adr1 = Client!adr1bl
        adr2 = Client!adr2bl
        cpcli = Client!cpbl
        villecli = Client!villebl
      Endif
      If Not Divers.value Then
        totf = Utils.db.Exec("SELECT * FROM " & Tab3 & " WHERE code = &1", Client!cdclibl)
      Else
        totf = Utils.db.Exec("SELECT * FROM " & Tab3 & " WHERE code = &1 and nom = &2", Client!cdclibl, Nomcli)
      Endif
      If totf.Available Then
        Total = Format$(Val(totf!totf) + Val(Utils.cpoint(Client!totalht)), "0.00")
        Totalttc = Format$(Val(totf!tottc) + Val(Utils.cpoint(Client!totalttc)), "0.00")
        If Not Divers.value Then
          Utils.db.Exec("UPdate " & Tab3 & " SET totf = &1, tottc = &2 WHERE code = &3", Total, Totalttc, Client!cdclibl)
        Else
          Utils.db.Exec("UPdate " & Tab3 & " SET totf = &1, tottc = &2 WHERE code = &3 and nom = &4", Total, Totalttc, Client!cdclibl, Nomcli) 
        Endif 
      Else
        Try Total = Format$(Client!totalht, "0.00")
        Try Totalttc = Format$(Client!totalttc, "0.00")
        If Not Divers.value Then
          Utils.db.Exec("INSERT INTO " & Tab3 & " (code, nom, cp, ville, totf, tottc) Values (&1, &2, &3,&4,&5, &6)", Client!cdclibl, Client!nmclibl, Client!cpbl, Client!villebl, Total, totalttc)
        Else
          Utils.db.Exec("INSERT INTO " & Tab3 & " (code, nom, adr1, adr2, cp, ville, totf, tottc) Values (&1, &2, &3,&4,&5, &6, &7, &8)", Client!cdclibl, Nomcli, adr1, adr2, cpcli, villecli, Total, totalttc)
        Endif
      Endif
      Total = 0
      Bl = Utils.db.Exec("SELECT * FROM " & Tab1 & " where num_ligbl = &1 order by num_ligbl", Client!numbl)
      If Bl.Available Then
        Utils.db.Exec("INSERT INTO " & Tab4 & " (num, code, nom, date, ht, ttc) Values (&1, &2, &3, &4, &5, &6)", Client!numbl, Client!cdclibl, Nomcli, Client!datebl, Client!totalht, Client!totalttc)
      Endif
    Until Client.MoveNext()
  Endif
  Client = Utils.db.Exec("SELECT * FROM " & Tab3 & " order by nom")
  If Client.Available Then
    Repeat
      Colbl.Add(Client!code & Client!nom, Client!code & Client!nom)
      Colbl.Item[0] = Client!code
      Colbl.Item[1] = Client!nom
      Colbl.Item[2] = Client!cp
      Colbl.Item[3] = Client!ville
      Colbl.Item[4] = Client!totf
      Colbl.Item[5] = Client!tottc
    Until Client.MoveNext()
  Endif
  
End

