        Stext2 = "Bonjour,\n\nVeuillez trouver ci-joint " & sText & "" & "\n\n" & "\n\nCordialement.\n"
        sText = "Votre " & sText
      Endif
      Me.mouse = Mouse.Wait
      Wait 0.5
