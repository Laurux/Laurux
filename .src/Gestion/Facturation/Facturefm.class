Public Sub Maj_Parametres()
  
  Dim Nfac2 As String
  Dim Tab As String = "Fiches_Parametres"
  
  With Utils
    Nfac2 = Val(Right$(Nfac, 6))
    Nfac2 = Format$(Nfac2, "000000")
    rResult = Utils.db.Exec("SELECT * FROM " & Tab & "")
    Utils.db.Exec("UPDATE  " & Tab & "  SET  dnfac = &1", Nfac2)
    Nfac = Nfac2
  End With
  
End

