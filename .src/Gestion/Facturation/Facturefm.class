    Endif
    If Divers.value Then
      Client = Utils.db.Exec("SELECT * FROM " & Tab4 & " where code = &1 and nom = &2 order by num", sclient, nmclient)
    Else
      Client = Utils.db.Exec("SELECT * FROM " & Tab4 & " where code = &1 order by num", sclient)
