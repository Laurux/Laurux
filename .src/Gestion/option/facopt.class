Public Sub grpnb_KeyPress()

If Key.code = Key.Enter Or Key.code = Key.Return Or Key.code = Key.Tab Then
  Stop Event
  If verifnb(Last.text) Then
    If IsNumber(Last.text) Then
      
      Select Case Last
        Case $textnbp
          If $inbc <> 0 And $textconsc.Text And verifnb($textnbp.Text) Then
            $textnbc.Text = Format(Val($textnbp.Text) * $inbc, "0")
            $textnbc.SetFocus
          Else
            $textconsc.SetFocus
          Endif
          $inbc = 0
        Case $textnbc
          If $inbb <> 0 And $textconsb.Text And verifnb($textnbc.Text) Then
            $textnbb.Text = Format(Val($textnbc.Text) * $inbb, "0")
            $textnbb.SetFocus
          Else
            $textconsb.SetFocus
          Endif
          $inbb = 0
        Case $textnbb
          valide
      End Select
    Else
      Balloon.Delay = 5000
      Try Balloon.Warning("<FONT Color=#212121>" & "Zone numérique", Last)
      Last.Clear
      Last.SetFocus
    Endif
  Else
    Select Case Last
      Case $textnbp
        $textconsc.SetFocus
      Case $textnbc
        $textconsb.SetFocus
      Case $textnbb
        valide
    End Select
  Endif
Endif
End
