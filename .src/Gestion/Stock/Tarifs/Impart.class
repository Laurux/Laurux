  With Utils
    remise = .cpoint(remise)
    If Val(remise) = Null Then remise = "0"
    remise = Format$(Val(remise), "0.000")
    If remise > 0 Then
      PaUA = Format$(Val(PbHT) - (Val(PbHT) * Val(remise) / 100), Nbdec)
    Else
      Paua = Pbht
    Endif
  End With
Catch
  If son Then
    Music.Play
  Endif
  message.Error(Error.Text & " " & Error.where)
  
End

