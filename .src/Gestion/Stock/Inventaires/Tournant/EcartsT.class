Filename As String
son As Integer = Start.Son
Decm As String ' nombre de décimales
PosY As Integer
Coulfond As New String[]
pdf As Cstocks

Public Sub _New()

  Dim rResult As Result
  Dim Tab As String
  Dim Frmt As New String[]

  Me.Center
  Music.Load(Start.Musique)
  Frmt = Utils.FColr(Start.LocalSettings["/Coul/Fnets"])
  Coulfond = Utils.Coulfd()
  Utils.Observers(Me)
  Tab = "Fiches_InvT"
  Try rResult = Utils.db.Exec("SELECT * FROM " & Tab & "")
  If Not Error And rResult.Available Then
    dte.Text = rResult!inv_date
    dte.Text = Left$(dte.text, 10)
    dte.Text = Mid$(dte.Text, 4, 2) & "/" & Left$(dte.Text, 2) & "/" & Right$(dte.Text, 4)
  Else
    If son Then
      Music.Play
    Endif
    Message.Warning("Attention! Il n'existe aucun inventaire\n Veuillez passer par la procédure d'initialisation d'inventaire SVP")
    Me.Close
  Endif

End

Public Sub Button1_Click()

  Dim Rinv As Result
  Dim rarts As Result
  Dim Tab As String
  Dim Tab2 As String
  Dim p As Integer
  Dim code As String
  Dim designation As String
  Dim qtestock As String
  Dim qtecomptee As String
  Dim Totht As String
  Dim Totpmp As String
  Dim Ecart As String
  Dim Pht As String
  Dim Pmp As String
  Dim Nlig As String
  Dim Nbpage As Integer

  Nbpage = 1
  Tab = "Fiches_InvT"
  Tab2 = "Fiches_Art"
  Totht = "0"
  Totpmp = "0"
  p = 1
  Shell "cd " & User.Home & ""
  filename = User.Home & "/tmp/EcartsT.pdf"
  pdf = New Cstocks("Portrait", "mm", "A4")
  pdf.Open()
  pdf.AliasNbPages()
  pdf.Entete("Impression des écarts : Inventaire tournant du " & dte.Text)
  posy = 20
  pdf.Level1E()
  posy += 5
  With Utils
    Me.Mouse = Mouse.Wait
    Rinv = Utils.db.Exec("SELECT * FROM " & Tab & " where inv_comptee = &1", 1)
    If Rinv.Available Then
      Repeat
        Nlig = Rinv!inv_nlig
        code = Rinv!inv_code
        rarts = Utils.db.Exec("SELECT * FROM " & Tab2 & " where art_code = &1", code)
        designation = Left$(rarts!art_design, 42)
        Decm = rarts!art_dec
        Pht = rarts!art_paht
        Pmp = .PointBase(rarts!art_pmp)
        qteStock = Rinv!inv_qtestock
        qtecomptee = Rinv!inv_qtecomptee
        Ecart = Rinv!inv_qtecomptee - Rinv!inv_qtestock
        Pht = Format$(Pht * Ecart, "0.00")
        Pmp = Format$(Pmp * Ecart, "0.00")
        Totht = Format$(Val(Totht) + Val(Pht), "0.00")
        Totpmp = Format$(Val(Totpmp) + Val(Pmp), "0.00")
        Inc p
        pdf.Level2E(Nlig, code, designation, qteStock, qtecomptee, Ecart, Pht, Pmp, PosY)
        posy += 5
        If PosY >= 283 Then
          pdf.Baspage()
          pdf.Entete("Impression des écarts : Inventaire tournant du " & dte.Text)
          posy = 20
          pdf.Level1E()
          posy += 5
        Endif
      Until Rinv.MoveNext()
      posy += 5
      pdf.Level3E(Totht, Totpmp, posy)
      pdf.BasPage()
      pdf.Output(Filename, False)
      Visualiseur.Prog(Filename)
    Else
      If son Then
        Music.Play
      Endif
      message(" Aucun article pour cette demande", "OK")
    Endif
    Me.Mouse = Mouse.Pointing
  End With

End

