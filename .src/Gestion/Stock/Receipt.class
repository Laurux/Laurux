    Endif
  Catch
    Colrcp.MoveFirst
    Totalrcpt.Text = "0,00"
    Tfrais.Text = "0,00"
    Do
      Colrcp.Item.Selected = True
      If Colrcp.Item[1] = Cart.text Or If Colrcp.Item[1] = Refourn.Text Or If Colrcp.Item[1] = scentrale Then
        If son Then
          Music.Play
        Endif
        Select Case Message.Question("Cet article a déjà été saisit ! Voulez-vous ? \n 1- Cumuler \n 2- Remplacer \n 3- Créer une nouvelle ligne", "1", "2", "3")
          Case 1
            qte = Format$(Val(Colrcp.Item[6]) + Val(qterecue.text), "0.000")
            qte = .Cdec(Decm, qte)
            Colrcp.Item[6] = qte
            Colrcp.Item[7] = Format$(Val(Paht.text) * Val(.cpoint(Colrcp.Item[6])), nbdec)
            Break
          Case 2
            Artstock.text = Val(.cpoint(Artstock.text)) - Val(.cpoint(Colrcp.Item[6]))
            Colrcp.Item[6] = qterecue.text
            Break
          Case 3
            Colrcp.Add(Nlgn, Nlgn & "-")
            Colrcp.Item[0] = Nlgn
            If Refart.value = True Then
              Colrcp.Item[1] = Cart.text
            Else
              If Not IsNull(Ref_four) Then
                Colrcp.Item[1] = Ref_four
              Else
                Colrcp.Item[1] = Cart.text
              Endif
            Endif
            Colrcp.Item[2] = Dart.text
            If Len(paht.Text) - InStr(paht.Text, ",") = 2 Then paht.Text = paht.Text & " "
            Colrcp.Item[3] = Pbht.text
            Colrcp.Item[4] = Tr.text
            If Len(prvt.Text) - InStr(prvt.Text, ",") = 2 Then prvt.Text = prvt.Text & " "
            Colrcp.Item[5] = Paht.text
            Colrcp.Item[6] = qterecue.text
            Patot = Format$(Val(Paht.text) * Val(qterecue.text), nbdec)
            If Len(Patot) - InStr(Patot, ",") = 2 Then Colrcp.Item[7] = Patot & "  "
            Colrcp.Item[7] = Patot
            Colrcp.Item[8] = Prvt.text
            Colrcp.Item[9] = Frais.text
            If exo = False Then
              Colrcp.Item[10] = Pattc
            Else
              Colrcp.Item[10] = Patot
            Endif
            Break
        End Select
      Endif
    Loop Until Colrcp.MoveNext()
    bas_doc()
    Me.Visible = True
  End With
  
End

'*******************************************
'*       On calcule le bas de document     *
'*******************************************
Public Sub bas_doc()
  
  Totalrcpt.Text = "0,00"
  Tfrais.Text = "0,00"
  totalttc.text = "0,00"
  Colrcp.MoveFirst
  Do
    Colrcp.Item.Selected = True
    Totalrcpt.Text = Format$(Val(Totalrcpt.Text) + (Val(Colrcp.Item[6]) * Val(Colrcp.Item[5])), "0.00")
    Tfrais.Text = Format$(Val(Tfrais.Text) + (Val(Colrcp.Item[9]) * Val(Colrcp.Item[6]) * Txconv), "0.00")
    Totalttc.Text = Format$(Val(Totalttc.Text) + (Val(Colrcp.Item[10]) * Val(Colrcp.Item[6])), "0.00")
  Loop Until Colrcp.MoveNext()
  Nbligne.Text = Colrcp.count
  modif = "0"
  
End

