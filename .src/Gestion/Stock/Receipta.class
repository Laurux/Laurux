  Tab = "Fiches_Ligcom"
  Entcm = "Fiches_Entcom"
  With utils
    If Colrcp.Count <> 0 Then
      Colrcp.MoveFirst
      Repeat
        Colrcp.Item.Selected = True
        If Val(.cpoint(Colrcp.Item[3])) <= Val(.cpoint(Colrcp.Item[7])) Then
          Utils.db.Exec("delete from " & Tab & " WHERE lind = &1", Colrcp.Item[13])
        Else
