          Tab = "Fiches_Art"
          Utils.db.Exec("UPdate  " & tab & "  SET art_com = &2 WHERE art_code = &1", Colrcp.Item[1], qtec)
          Tab = "Fiches_Ligcom"
          Utils.db.Exec("UPdate  " & tab & "  SET qte = &2 WHERE lind = &1", Colrcp.Item[13], qtec)
          Totcom2 = Totcom2 + Val(Colrcp.Item[6])
