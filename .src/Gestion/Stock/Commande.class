'********************************
Public Sub Tx1LF()
  
  With Utils
    If Not IsNull(Cart.Text) Then
      If IsNull(Tx1.Text) Then Tx1.Text = "0,00"
      If Val(.cpoint(Tx1.Text)) = Null Then
        If Start.son Then
          Music.Play
        Endif
        message.Warning("Veuillez verifier votre saisie de l'eco-taxe SVP !")
