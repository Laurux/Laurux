Public Sub Dbclk()
  
  If Not Dbl Then
    Deb2()
    Dbl = "1"
  Else
    Deb()
    Dbl = ""
  Endif
  NbEnreg = 0
  
End

Public Sub ColFac_Click()
  
  Facture.Bsel = True
  Facture.numeroFac = ColFac[ColFac.row, 2].Text
  Me.close
  
End

Public Sub ColFac_KeyPress()
  
  If Key.code = Key.Esc Or key.code = key.F2 Then Me.Close
  
End

Public Sub ColFac_MouseWheel()
  
  If mouse.Delta = -1 Then
    If ColFac.Rows.Count = 27 Then NbEnreg = NbEnreg + 27
  Else
    If ColFac.Rows.Count <= 27 Then NbEnreg = NbEnreg - 27
  Endif
  If Not sDa Then
    If Not Dbl Then
      Deb2()
    Else
      Deb()
    Endif
  Else
    If Not Dbl Then
      Deb2()
    Else
      Deb()
    Endif
  Endif
  
End
