Public Sub FamMan()
  
  Dim Selection As Result
  
  Tab = "Fiches_Fam" 
  Selection = Utils.db.Exec("SELECT * FROM " & tab & " WHERE code_fam = &1", Fam.Text)
  LibelFam.Text = Selection!libell_fam
