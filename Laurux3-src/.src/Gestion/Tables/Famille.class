      message.Warning("Veuillez verifier la saisie de votre coefficient SVP !")
      b = 1
    Else
      Tx = Val(.cpoint(Coef.Text))
      Coef.Text = Format$(Tx, "0.000")
      b = 0
    Endif
  End With
  
End

