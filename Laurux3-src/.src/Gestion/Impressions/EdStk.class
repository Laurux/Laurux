Public Sub SelectionArt()
  
  Dim sel As String = ""
  Dim MyForm As TriArticles
  
  Tab = "Fiches_Art" 
  sel = ""
  Tri = "art_code"
  MyForm = New TriArticles(True, "", Tri, "EdStk", "", "")
  MyForm.Showmodal()
