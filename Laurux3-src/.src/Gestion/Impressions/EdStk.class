    Case 2
      Button2_Click()
  End Select
  
End

Public Sub Cmpt_KeyPress()
  
  If Key.code = Key.enter Or Key.code = Key.return Or key.Code = key.Tab Then
    Select Case Last.tag
      Case 1
        Art2.SetFocus
        Art2.Select
        Stop Event
        
      Case 2
        fam.SetFocus
        fam.Select
        Stop Event
        
      Case 3
        fam2.SetFocus
        fam2.Select
        Stop Event
        
      Case 4
        four.SetFocus
        four.Select
        Stop Event
        
      Case 5
        four2.SetFocus
        four2.Select
        Stop Event
        
      Case 6
        Button2.SetFocus
        Stop Event
        
    End Select
  Endif
  
End

