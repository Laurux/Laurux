'******************************************************************
'*    Recherche d'un type client lors d'une saisie manuelle       *
'******************************************************************
Public Sub Quitte_Cdt()
  
  Dim Typc As Result
  
  Tab = "Fiches_Typec" 
  Typc = Utils.db.Exec("SELECT * FROM " & Tab & "  WHERE code = &1", cdt.Text)
  If Not Typc.Available Then
    Stop Event
    If son Then
      Music.Play
    Endif
    Balloon.Delay = 1000
    Balloon.Warning(("Ce code type client n'existe pas !\n Verifiez votre saisie SVP !"), Cdt)
    Cdt.SetFocus
    Cdt.Select
  Else
    LibelType.Text = Typc!libelle
    Typc = Utils.db.Exec("SELECT * FROM " & Cbase.Table("TabCtcli") & " where coder = &1", Cdt.Text)
    If Not Typc.Available Then 
      Message.Warning("Aucun tarif n'a été saisit pour ce type client !")
      Cdt.Clear
      Libeltype.clear
      Cdt.SetFocus
    Endif
  Endif
  
End

Public Sub cdt_KeyPress()
  
  If Key.code = Key.enter Or Key.code = Key.Return Or Key.code = Key.Tab Then
    If Not IsNull(Cdt.Text) Then Quitte_Cdt()
  Endif
  
End

Public Sub Btn_Click()
  
  Select Case Last.tag
      
    Case 1
      Button1_Click()
      
    Case 2
      Button2_Click()
      
    Case 3
      If Exist(filename) Then Try Kill filename
      Me.Close
      
  End Select
  
End

Public Sub Btn_KeyPress()
  
  Select Case Last.tag
    Case 2
      Button2_Click()
  End Select
  
End

Public Sub Cmpt_KeyPress()
  
  If Key.code = Key.enter Or Key.code = Key.return Or Key.code = Key.Tab Then
    Select Case Last.tag
      Case 1
        Art_man()
        If b = 1 Then
          Art.SetFocus
          Art.Select
          b = 0
        Else
          Art2.SetFocus
          Art2.Select
        Endif
        Stop Event
        
      Case 2
        Art_man()
        If b = 1 Then
          Art.SetFocus
          Art.Select
          b = 0
        Else
          Fam.SetFocus
          Fam.Select
        Endif
        Stop Event
        
      Case 3
        fam2.SetFocus
        fam2.Select
        Stop Event
        
      Case 4
        four.SetFocus
        four.Select
        Stop Event
        
      Case 5
        four2.SetFocus
        four2.Select
        Stop Event
        
      Case 6
        Button2.SetFocus
        Stop Event
        
    End Select
  Endif
  
  If key.code = key.F1 Then
    Button1_Click()
    Stop Event
  Endif
  
  If key.code = key.F2 Then
    Select Case Last.tag
      Case 1
        ToggleButton1_Click()
        Stop Event
      Case 2
        ToggleButton2_Click()
        Stop Event
      Case 3
        ToggleButton3_Click()
        Stop Event
      Case 4
        ToggleButton4_Click()
        Stop Event
      Case 5
        ToggleButton5_Click()
        Stop Event
      Case 6
        ToggleButton6_Click()
        Stop Event
    End Select
  Endif
  
End

