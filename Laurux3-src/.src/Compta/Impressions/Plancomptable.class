  Music.Load(Start.Musique)
  Me.Center
  Bclient_Click()
  
End

Public Sub ToggleButton2_Click()
  
  Dim MyForm As TriComptes
  
  Tri = "cast(compte_cc AS char)"
  MyForm = New TriComptes(Tri, Type, "", "D4", "")
  MyForm.Showmodal()
  If Comptabilite.Bsel = True Then
    Cpt2.text = Comptabilite.sCmpt
    Cpt.SetFocus
  Endif
  
End

