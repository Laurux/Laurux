Public Sub Btn_Click()
  
  Select Case Last.tag
      
    Case 1
      Button1_Click()
      
    Case 2
      Button2_Click()
      
    Case 3
      If Exist(filename) Then Try Kill filename
      Me.Close
      
  End Select
  
End

Public Sub Cmpt_KeyPress()
  
  If Key.code = Key.enter Or Key.code = Key.return Or Key.code = Key.Tab Then
    Select Case Last.tag
        
      Case 1
        
        cpt2_LostFocus()
        cpt_GotFocus()
        cpt.SetFocus
        cpt.Select
        Stop Event
        
      Case 2
        cpt_LostFocus()
        cpt2_GotFocus()
        cpt2.SetFocus
        cpt2.Select
        Stop Event
    End Select
  Endif
  
  If key.code = key.F2 Then
    Select Case Last.tag
      Case 1
        ToggleButton3_click()
        Stop Event
        
      Case 2
        ToggleButton2_click()
        Stop Event
    End Select
  Endif
  
End

